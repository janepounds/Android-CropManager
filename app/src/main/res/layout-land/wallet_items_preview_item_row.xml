<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/background_home"
    >

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        >
        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="wrap_content"
           
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_view_crop_invoice_items_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
               
                android:gravity="center"
                android:spinnerMode="dialog"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
           
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_view_crop_invoice_products"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/textColor"
                android:gravity="center"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_view_crop_invoice_qty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/textColor"
                android:gravity="center"
                android:textSize="13sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
           
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_wallet_item_units"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/textColor"
                android:gravity="center"

                android:textSize="13sp" />
        </LinearLayout>




    </TableRow>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:background="@color/estimates_preview_item_divider"/>
    
</LinearLayout>



