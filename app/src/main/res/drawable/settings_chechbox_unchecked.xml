<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/white" />
                    <corners android:radius="3dp" />
                    <stroke android:width="1dp" android:color="@color/darker_gray" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end" android:src="@drawable/check_white_icon" />
            </item>
        </layer-list>
    </item>
</selector>
