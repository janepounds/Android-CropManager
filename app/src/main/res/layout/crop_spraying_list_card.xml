<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F4F4F4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded_cornor_bg"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:padding="6dp"
                android:src="@drawable/ic_spraying" />

            <View
                android:id="@+id/txt_view_crop_spraying_card_line"
                android:layout_width="2dp"
                android:layout_height="100dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="#444444"
                android:textAlignment="center"
                android:visibility="gone"/>
            <View
                 android:layout_width="2dp"
                android:layout_height="190dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="#444444"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/txt_view_crop_spraying_card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="20-08-2018"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:padding ="0dp"
                android:background="@drawable/input_shapes_crops_card"
                android:orientation="vertical">
                <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="@dimen/dimen_5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:textSize="18sp"
                        android:textAlignment="gravity"
                        android:text="Spraying"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary" />
                  <LinearLayout
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_gravity="end"
                      android:layout_weight="0.1"
                      android:orientation="horizontal">


                      <ImageView
                          android:id="@+id/img_crop_spraying_card_more"
                          android:layout_width="24dp"
                          android:layout_height="24dp"
                          android:src="@drawable/ic_baseline_more_vert"
                          app:tint="@color/colorPrimary" />
                  </LinearLayout>
              </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="5dp"
                    android:background="#D2D3D2" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/txt_view_crop_spraying_card_spray_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginEnd="@dimen/dimen_5dp"
                        android:text="Weed Control Spray"
                        android:textColor="@color/blackText" />

                    <TextView
                        android:id="@+id/txt_view_crop_spraying_card_spray_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="(Solid)"
                        android:textColor="@color/blackText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="@dimen/dimen_10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Amount Used"
                        android:textSize="14sp"
                        android:textColor="@color/blackText"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text=":"
                        android:textColor="@color/blackText"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/txt_view_crop_spraying_card_rate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="56kg"
                        android:textColor="#899889" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="@dimen/dimen_10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Recurrence"
                        android:textSize="14sp"
                        android:textColor="@color/blackText"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text=":"
                        android:textColor="@color/blackText"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/txt_view_crop_spraying_recurrence"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Daily"
                        android:textColor="#899889" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="@dimen/dimen_10dp"
                    android:visibility="visible">
                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Reason"
                        android:textSize="14sp"
                        android:textColor="@color/blackText"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text=":"
                        android:textColor="@color/blackText"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/txt_view_crop_spraying_card_reason"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="To Control Pests"
                        android:textColor="#899889" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>