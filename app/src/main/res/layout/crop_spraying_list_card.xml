<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="vertical">
            <View
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:textAlignment="center"
                android:layout_marginStart="16dp"
                android:background="@color/black" />
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitXY"
                android:src="@drawable/treatment_kit" />

            <View
                android:id="@+id/txt_view_crop_spraying_card_line"
                android:layout_width="1dp"
                android:layout_height="55dp"
                android:textAlignment="center"
                android:layout_marginStart="16dp"
                android:background="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/txt_view_crop_spraying_card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="20-08-2018"
                android:textColor="@color/blackText" />

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@drawable/crop_card_border"
                android:layout_marginEnd="8dp"
              android:padding="4dp"
             >
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

                  <TextView
                      android:id="@+id/txt_view_crop_spraying_card_spray_name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:textStyle="bold"
                      android:text="Weed Control Spray"
                      android:textColor="@color/blackText" />
                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="right"
                      android:layout_weight="0.1"
                      android:orientation="horizontal">


                      <ImageView
                          android:id="@+id/img_crop_spraying_card_more"
                          android:layout_width="24dp"
                          android:layout_height="24dp"
                          android:src="@drawable/more_options_icon" />
                  </LinearLayout>
              </LinearLayout>

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Operator : "
                      android:textStyle="bold"
                      android:textColor="@color/blackText"
                       />

                  <TextView
                      android:id="@+id/txt_view_crop_spraying_card_operator"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="John Kiwanuka"
                      android:textColor="@color/blackText" />
              </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rate : "
                        android:textStyle="bold"
                        android:textColor="@color/blackText"
                        />

                    <TextView
                        android:id="@+id/txt_view_crop_spraying_card_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="56kg/ha"
                        android:textColor="@color/blackText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="W.D : "
                            android:textStyle="bold"
                            android:textColor="@color/blackText"
                            />
                        <TextView
                            android:id="@+id/txt_view_crop_spraying_card_wind_direction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NW "
                            android:textColor="@color/blackText"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="W.C: "
                            android:textStyle="bold"
                            android:textColor="@color/blackText"
                            />
                        <TextView
                            android:id="@+id/txt_view_crop_spraying_card_water_condition"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sunny"
                            android:textColor="@color/blackText" />
                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Reason : "
                        android:textColor="@color/blackText"
                        />
                    <TextView
                        android:id="@+id/txt_view_crop_spraying_card_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="To Control Pests"
                        android:textColor="@color/blackText" />
                </LinearLayout>

          </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>