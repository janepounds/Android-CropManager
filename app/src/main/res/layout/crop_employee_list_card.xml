<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:paddingStart="24dp"
        android:background="@color/white"
        >
        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"


                                android:src="@drawable/contact" />

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                >
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginTop="8dp">

                                    <TextView
                                        android:id="@+id/txt_crop_employee_card_first_name"
                                        android:textSize="16sp"
                                        android:textColor="@color/black"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:layout_marginRight="8dp"
                                        android:text="Alex" />

                                    <TextView
                                        android:id="@+id/txt_crop_employee_card_last_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Muhangi"
                                        android:layout_marginTop="8dp"
                                        android:textColor="@color/black"
                                        android:textSize="16sp" />
                                    <LinearLayout
                                        android:orientation="horizontal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:layout_marginLeft="6dp"
                                        android:layout_marginTop="3dp"
                                        android:layout_marginBottom="3dp">




                                        <ImageView
                                            android:id="@+id/img_crop_employee_card_more"
                                            android:layout_width="25dp"
                                            android:layout_height="20dp"
                                            android:backgroundTint="@color/black"
                                            android:textColor="@color/darker_gray"
                                            android:src="@drawable/ic_baseline_more_vert" />


                                    </LinearLayout>


                                </LinearLayout>
                                <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="6dp"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginTop="8dp"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/txt_crop_employee_card_title"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Production Manager "
                                            android:textColor="@color/estimates_card_text_color"
                                         
                                            android:textSize="14sp" />



                                    </LinearLayout>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginTop="8dp">

                                    <TextView
                                        android:id="@+id/txt_crop_employee_card_employment_status"
                                        android:textSize="14sp"
                                        android:textColor="@color/estimates_card_text_color"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Full-Time"
                                       />


                                </LinearLayout>
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginTop="8dp">

                                        <ImageView
                                            android:layout_width="25dp"
                                            android:layout_height="25dp"
                                            android:src="@drawable/phone_caller"
                                           />

                                    <TextView
                                        android:id="@+id/txt_crop_employee_card_phone"
                                        android:textSize="14sp"
                                        android:textColor="@color/estimates_card_text_color"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0704123123"
                                        />



                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/txt_crop_employee_card_pay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salary"
                android:textSize="14sp"
                android:textColor="@color/estimates_card_text_color"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                >

                <TextView
                    android:id="@+id/txt_crop_employee_card_pay_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="USD 300"
                    android:textColor="@color/estimates_card_text_color"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"/>
                <TextView
                    android:id="@+id/txt_crop_employee_card_pay_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Month"
                    android:textColor="@color/estimates_card_text_color"
                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>