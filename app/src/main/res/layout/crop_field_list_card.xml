<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/input_shapes_crops_card"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:padding="0dp"
                android:layout_height="wrap_content"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="3dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="3dp">

                        <TextView
                            android:id="@+id/txt_crop_field_card_name"
                            android:textSize="16dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginRight="4dp"
                            android:text="Field 1 " />



                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="52dp"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.1"
                                    android:textSize="16dp" />



                                <TextView
                                    android:id="@+id/txt_crop_field_card_area"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.6"
                                    android:layout_height="match_parent"
                                    android:text=" 15.5 ha"
                                    android:layout_marginStart="-5dp"
                                    android:textColor="@color/blackText"
                                    android:textStyle="bold"
                                    android:textSize="18dp" />

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.3"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginLeft="6dp"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginBottom="3dp">


                                    <ImageView
                                        android:id="@+id/img_crop_fields_card_more"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_baseline_chevron_right_24" />


                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#D5D5D5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:src="@drawable/ic_field"
                        android:layout_gravity="start"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="6dp"
                                android:layout_marginTop="3dp"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.1"
                                    android:text="Field Type:"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16dp" />

                                <TextView
                                    android:id="@+id/txt_crop_field_card_soil_type"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:text="Loamy Sand"
                                    android:textColor="@color/blackText"
                                    android:textStyle="bold"
                                    android:textSize="16dp" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:layout_marginLeft="6dp"
                                android:layout_marginTop="3dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.1"
                                    android:text="Status:"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16dp" />

                                <TextView
                                    android:id="@+id/txt_crop_field_card_soil_category"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:text="Light Sand "
                                    android:textColor="@color/blackText"
                                    android:textStyle="bold"
                                    android:textSize="16dp" />



                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Croppable Area:"
                                android:textColor="@color/colorPrimary"
                                android:layout_weight="1.1"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/txt_crop_field_card_croppable_area"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.9"
                                android:text="12.45 ha"
                                android:textColor="@color/blackText"
                                android:textStyle="bold"
                                android:textSize="16dp" />




                        </LinearLayout>



                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>