<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/input_shapes_crops_card"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:padding="0dp"
                android:layout_height="wrap_content"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="3dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.1"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="3dp">

                        <TextView
                            android:id="@+id/txt_crop_field_card_name"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textStyle="bold"
                            android:layout_marginRight="4dp"
                            android:text="Field 1 " />



                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="52dp"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:textSize="16dp" />



                                <TextView
                                    android:id="@+id/txt_crop_field_card_area"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.9"
                                    android:layout_height="match_parent"
                                    android:text="15.5 square miles"
                                    android:gravity="center_vertical"
                                    android:textColor="@color/blackText"
                                    android:textStyle="bold"
                                    android:textSize="16sp" />

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="0dp"
                                    android:layout_weight="0.2"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:layout_marginTop="3dp"
                                    android:layout_marginBottom="3dp">


                                    <ImageView
                                        android:id="@+id/img_crop_fields_card_more"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_baseline_more_vert" />


                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#D5D5D5"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:src="@drawable/ic_field"
                        android:layout_gravity="start"/>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:layout_marginLeft="6dp"
                                android:layout_marginTop="3dp"
                                android:orientation="horizontal">

                                <TextView

                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".9"
                                    android:text="Field Type"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16sp" />



                                <TextView
                                    android:id="@+id/txt_crop_field_card_soil_type"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:text="Loamy Sand"
                                    android:textColor="@color/blackText"
                                    android:textStyle="bold"
                                    android:textSize="16sp"/>

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="6dp"
                                android:layout_marginLeft="6dp"
                                android:layout_marginTop="3dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".9"
                                    android:text="Status"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16dp" />

                                <TextView
                                    android:id="@+id/txt_crop_field_card_soil_category"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.9"
                                    android:text="Light Sand "
                                    android:textColor="@color/blackText"
                                    android:textStyle="bold"
                                    android:textSize="16dp" />



                            </LinearLayout>


                        </LinearLayout>


                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Croppable Area"
                                android:textColor="@color/colorPrimary"
                                android:layout_weight=".9"
                                android:textSize="16sp" />


                            <TextView
                                android:id="@+id/txt_crop_field_card_croppable_area"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.9"
                                android:text="12.45 ha"
                                android:textColor="@color/blackText"
                                android:textStyle="bold"
                                android:textSize="16dp" />




                        </LinearLayout>



                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:id="@+id/layout_crop_field_card_show_hide"
        android:background="#a4b7a0"
        >

        <ImageView
            android:id="@+id/img_crop_field_card_show_crops"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:src="@drawable/arrow_drop_down" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_crop_field_expand"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_20dp"
        android:background="#a4b7a0"
        android:visibility="gone"
        >

    </LinearLayout>
    </LinearLayout>
</LinearLayout>