<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F4F4F4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="vertical">



            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitXY"
                android:src="@drawable/scouting" />

            <View
                android:id="@+id/txt_view_crop_scouting_card_line"
                android:layout_width="1dp"
                android:layout_height="135dp"
                android:layout_marginStart="16dp"
                android:background="#E7EAE7"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_view_crop_scouting_card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="8dp"
                android:text="20-08-2018"
                android:textSize="18sp"
                android:textColor="#A6C0A7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/input_shapes_crops_card"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="0dp"
                    android:padding="8dp">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="4dp"
                        android:layout_marginStart="24dp"
                        android:text="Scouting"
                        android:textSize="18sp"
                        android:layout_weight="0.9"
                        android:textColor="@color/blackText"
                       />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_weight="0.1"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/img_crop_scouting_card_more"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_baseline_more_vert" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="240dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="5dp"
                    android:background="#D2D3D2" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="0dp"
                    android:padding="4dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="30dp"
                        android:text="Method : "
                        android:textColor="@color/blackText"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/txt_view_crop_scouting_card_method"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="#899889"
                        android:text="Visual Observation"/>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_crop_scouting_card_infestation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:layout_margin="0dp"
                    android:padding="4dp"
                    >

                    <TextView
                        android:id="@+id/txt_view_crop_scouting_card_infestation_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="30dp"
                        android:text="Nematodes : "
                        android:textColor="@color/blackText"
                       android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_view_crop_scouting_card_infestation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="None"
                        android:textColor="#899889" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_crop_scouting_card_infestation_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:layout_margin="0dp"
                    android:padding="4dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="30dp"
                        android:text="Infestation Level : "
                        android:textColor="@color/blackText"
                       android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_view_crop_scouting_card_infestation_level"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="None"
                        android:textColor="#899889" />
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="0dp"
                    android:padding="4dp">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30dp"
                        android:layout_weight="1"
                        android:text="Cost : "
                        android:textColor="@color/blackText"
                       android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_view_crop_scouting_card_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="UGX 150,000"
                        android:textColor="#899889" />
                </LinearLayout>





            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="end"
                android:padding="0dp"
                android:layout_marginEnd="8dp"
                android:id="@+id/layout_crop_scouting_card_show_hide"
                android:background="#B6C5B6"
                >

                <ImageView
                    android:id="@+id/img_crop_scouting_card_show_crops"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:backgroundTint="@color/black"
                    android:textColor="#D2DDD5"
                    android:layout_marginRight="18.17dp"
                    android:layout_marginTop="10dp"

                    android:src="@drawable/arrow_drop_down" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_crop_scouting_expand"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="#B6C5B6"
                android:visibility="gone">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>