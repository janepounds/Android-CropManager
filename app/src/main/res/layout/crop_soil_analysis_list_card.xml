<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F4F4F4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitXY"
                android:src="@drawable/cultivation" />

            <View
                android:id="@+id/txt_view_crop_soil_analysis_card_line"
                android:layout_width="1dp"
                android:layout_height="135dp"
                android:layout_marginStart="16dp"
                android:background="#E7EAE7"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="vertical"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp"

            >

            <TextView
                android:id="@+id/txt_view_crop_soil_analysis_card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="8dp"
                android:text="20-08-2018"
                android:textSize="18sp"
                android:textColor="#A6C0A7" />

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@drawable/input_shapes_card"
                android:layout_marginEnd="8dp"
              android:padding="20dp"
             >

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_margin="2dp">

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_weight="0.1"
                      android:orientation="horizontal">

                      <TextView

                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_weight="0.5"
                          android:text="Soil pH"
                          android:textColor="@color/blackText"
                          />

                      <TextView
                          android:id="@+id/txt_view_crop_soil_analysis_card_ph"
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:layout_weight="0.6"
                          android:text="50%"
                          android:textColor="#899889" />
                  </LinearLayout>

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
                      <ImageView
                          android:id="@+id/img_crop_soil_analysis_card_more"
                          android:layout_width="24dp"
                          android:layout_height="24dp"
                          android:src="@drawable/more_options_icon" />
                  </LinearLayout>

              </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginEnd="24dp"
                  android:layout_marginBottom="8dp">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="0.5"
                      android:text="Organic Matter   "

                      android:textColor="@color/blackText"
                       />

                  <TextView
                      android:id="@+id/txt_view_crop_soil_analysis_card_organic_matter"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="0.6"
                      android:text="50%"
                      android:textColor="#899889" />
              </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="24dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Agronomist  "
                        android:textColor="@color/blackText"
                        />

                    <TextView
                        android:id="@+id/txt_view_crop_soil_analysis_card_agronomist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:text="50%"
                        android:textColor="#899889" />
                </LinearLayout>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:visibility="gone">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Results: "
                      android:textStyle="bold"
                      android:textColor="@color/blackText"
                       />

                  <TextView
                      android:id="@+id/txt_view_crop_soil_analysis_card_results"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Dr. Williams"
                      android:textColor="@color/blackText" />
              </LinearLayout>

          </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="end"
                android:padding="0dp"
                android:layout_marginEnd="8dp"
                android:id="@+id/layout_crop_scouting_card_show_hide"
                android:background="#B6C5B6"
                >

                <ImageView
                    android:id="@+id/img_crop_scouting_card_show_crops"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:backgroundTint="@color/black"
                    android:textColor="#D2DDD5"
                    android:layout_marginEnd="18.17dp"
                    android:layout_marginTop="10dp"

                    android:src="@drawable/arrow_drop_down" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_crop_scouting_expand"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B6C5B6"
                android:layout_marginEnd="8dp"
                android:padding="4dp"
                android:visibility="gone"
                >


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>