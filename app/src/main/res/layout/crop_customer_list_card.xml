<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="3dp"
                android:layout_weight="0.1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_crop_customer_card_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="Kiwanuka Farm Ltd"
                    android:textColor="#696666"
                    android:textSize="14dp" />


                <TextView

                    android:id="@+id/img_crop_customer_card_unpaid_invoices"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:gravity="end"
                    android:text="0/0 unpaid"
                    android:textColor="#696666"
                    android:textSize="14dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/img_crop_customer_card_more"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:textColor="@color/darker_gray"
                app:srcCompat="@drawable/more_options_icon" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_crop_customer_card_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0700214672"
                            android:textColor="#696666"
                            android:textSize="14dp" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="5dp"
                            android:text=","
                            android:textColor="#696666"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_crop_customer_card_city_town"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:text="Masaka"
                            android:textColor="#696666"
                            android:textSize="14dp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_crop_customer_card_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Kiwanuka"
                        android:textColor="#696666"
                        android:textSize="14dp" />



                    <TextView
                        android:id="@+id/txt_crop_customer_card_opening_balance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:gravity="end"
                        android:paddingLeft="0dp"
                        android:text="1762156000"
                        android:textColor="@color/red"
                        android:textSize="14dp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_crop_customer_card_due_payment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="6dp"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Due Payment :"
                            android:textColor="#696666"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_crop_customer_card_due_payment_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:text="3-15-2018"
                            android:textColor="#696666"
                            android:textSize="14dp" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>