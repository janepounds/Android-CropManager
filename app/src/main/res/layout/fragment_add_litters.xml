<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="@dimen/dimen_10dp"
    tools:context="com.myfarmnow.myfarmcrop.fragments.farmrecords.liveStockRecords.AddLittersFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_20dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/add_animal_close"
                        android:layout_width="26.18dp"
                        android:layout_height="26.18dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/close" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/josefin_sans_semibold"
                        android:gravity="center"
                        android:text="@string/add_litter"
                        android:textAllCaps="true"
                        android:textColor="@color/blackText"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:fontFamily="@font/josefin_sans"
                            android:text="@string/date_of_birth" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_corner"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/add_litter_dob"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_margin="0dp"
                                android:layout_weight="0.8"
                                android:background="@android:color/transparent"
                                android:paddingStart="@dimen/dimen_10dp"
                                android:paddingEnd="@dimen/dimen_10dp"
                                android:textSize="14sp" />

                            <ImageView
                                android:id="@+id/image_dob"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1"
                                android:fontFamily="@font/josefin_sans"
                                android:gravity="center"
                                android:paddingStart="@dimen/margin_10"
                                android:paddingEnd="@dimen/margin_10"
                                android:src="@drawable/ic_calendar_add"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:fontFamily="@font/josefin_sans"
                            android:text="@string/litter_size" />

                        <EditText
                            android:id="@+id/add_litter_litters_size"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/edittext_corner"
                            android:ems="10"
                            android:textSize="14sp"
                            android:inputType="number"
                            android:paddingStart="@dimen/dimen_10dp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:fontFamily="@font/josefin_sans"
                            android:text="@string/mother_dam" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_corner"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/add_litter_mother_dam_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:background="@android:color/transparent"
                                android:entries="@array/spinner_sex"
                                android:gravity="center"
                                android:spinnerMode="dropdown" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_baseline_arrow_drop_down_24" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:fontFamily="@font/josefin_sans"
                            android:text="@string/father_sire" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_corner"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/add_litter_father_sire_spinner"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:background="@android:color/transparent"
                                android:entries="@array/spinner_sex"
                                android:gravity="center"
                                android:spinnerMode="dropdown" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:layout_marginEnd="8dp"
                                android:layout_marginRight="10dp"
                                android:src="@drawable/ic_baseline_arrow_drop_down_24" />
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:fontFamily="@font/josefin_sans"
                            android:text="@string/born_alive" />

                        <EditText
                            android:id="@+id/add_litter_born_alive_et"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/edittext_corner"
                            android:paddingStart="@dimen/dimen_10dp"
                            android:textSize="14sp"
                            android:inputType="number"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:fontFamily="@font/josefin_sans"
                            android:text="@string/born_dead" />

                        <EditText
                            android:id="@+id/add_litter_born_dead_et"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:paddingStart="@dimen/dimen_10dp"
                            android:background="@drawable/edittext_corner"
                            android:ems="10"
                            android:textSize="14sp"
                            android:inputType="number"/>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:fontFamily="@font/josefin_sans"
                            android:text="@string/number_of_males" />

                        <EditText
                            android:id="@+id/add_litter_number_of_males_et"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/edittext_corner"
                            android:paddingStart="@dimen/dimen_10dp"
                            android:textSize="14sp"
                            android:inputType="number"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:fontFamily="@font/josefin_sans"
                            android:text="@string/number_of_females" />

                        <EditText
                            android:id="@+id/add_litter_number_of_females_et"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:paddingStart="@dimen/dimen_10dp"
                            android:background="@drawable/edittext_corner"
                            android:ems="10"
                            android:textSize="14sp"
                            android:inputType="number"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:fontFamily="@font/josefin_sans"
                            android:text="@string/weaning" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_corner"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/add_litter_weaning_et"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_margin="0dp"
                                android:layout_weight="0.8"
                                android:background="@android:color/transparent"
                                android:inputType="number"
                                android:paddingStart="@dimen/dimen_10dp"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1"
                                android:background="@drawable/edittext_right_corners_green"
                                android:fontFamily="@font/josefin_sans"
                                android:gravity="center"
                                android:paddingStart="@dimen/margin_10"
                                android:paddingEnd="@dimen/margin_10"
                                android:text="@string/days"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:fontFamily="@font/josefin_sans"
                            android:text="@string/weaning_alert" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_corner"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/add_litter_weaning_alert_et"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_margin="0dp"
                                android:layout_weight="0.8"
                                android:background="@android:color/transparent"
                                android:inputType="number"
                                android:paddingStart="@dimen/dimen_10dp"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1"
                                android:background="@drawable/edittext_right_corners_green"
                                android:fontFamily="@font/josefin_sans"
                                android:gravity="center"
                                android:paddingStart="@dimen/margin_10"
                                android:paddingEnd="@dimen/margin_10"
                                android:text="@string/days_before"
                                android:textColor="@color/white"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20dp"
                    android:background="@drawable/rounded_corners_button">



                    <Button
                        android:id="@+id/btn_save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="@color/transparent"
                        android:text="Submit"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/button_text_size" />

                    <ImageView
                        android:layout_width="30dip"
                        android:layout_height="30dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="right|center_vertical"
                        android:layout_margin="10dip"
                        android:src="@drawable/ic_right_arrow">
                    </ImageView>
                </FrameLayout>

            </LinearLayout>



    </RelativeLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>