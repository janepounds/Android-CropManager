<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:background="@color/whiteColor">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <TableRow

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            >
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="36dp"
                android:orientation="horizontal"
                android:background="@drawable/input_shapes_grey_spinner">
                <Spinner
                    android:id="@+id/spinner_crop_invoice_products"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:spinnerMode="dialog"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/crop_estimate_small_column_size"
                android:layout_height="match_parent"

                android:orientation="horizontal">
                <EditText
                    android:id="@+id/txt_crop_invoice_qty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_shapes"
                    android:gravity="center"
                    android:textColor="@color/textColor"
                    android:layout_margin="2dp"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/crop_estimate_small_column_size"
                android:layout_height="match_parent"

                android:orientation="horizontal">
                <EditText
                    android:id="@+id/txt_crop_invoice_rate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_shapes"
                    android:textColor="@color/textColor"
                    android:gravity="center"
                    android:layout_margin="2dp"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/crop_estimate_small_column_size"
                android:layout_height="match_parent"

                android:orientation="horizontal">
                <EditText
                    android:id="@+id/txt_crop_invoice_tax"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_shapes"
                    android:gravity="center"
                    android:textColor="@color/textColor"
                    android:layout_margin="2dp"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="match_parent"

                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_view_crop_invoice_amount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_shapes"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:textSize="14sp"/>
            </LinearLayout>



        </TableRow>
        <LinearLayout
            android:id="@+id/layout_item_delete"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">



            <ImageView
                android:layout_width="0dp"
                android:layout_height="12dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:gravity="center"
                android:layout_weight="1"
                android:src="@drawable/delete_red"
                />


        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:background="@color/estimates_preview_item_divider"/>
</LinearLayout>





