<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.CropEstimatePreviewActivity"
    tools:showIn="@layout/activity_crop_estimate_preview">
    <ScrollView
        android:id="@+id/scroll_view_invoice_summary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/layout_invoice_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_view_crop_invoice_estimate_farm_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Karlin Farms"
                         android:textSize="12sp" android:textColor="@color/textColor"
                        />
                    <TextView
                        android:id="@+id/text_view_crop_invoice_estimate_user_street"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Namungona"
                         android:textSize="12sp" android:textColor="@color/textColor"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                         android:textSize="12sp" android:textColor="@color/textColor">
                        <TextView
                            android:id="@+id/text_view_crop_invoice_estimate_user_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kampala"
                             android:textSize="12sp" android:textColor="@color/textColor"/>
                        <TextView
                            android:id="@+id/text_view_crop_invoice_estimate_user_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Uganda"
                             android:textSize="12sp" android:textColor="@color/textColor"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="end"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Estimate"
                                 android:textSize="12sp" android:textColor="@color/textColor"/>

                            <TextView
                                android:id="@+id/text_view_crop_invoice_estimate_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#EST-0001"
                                 android:textSize="12sp" android:textColor="@color/textColor"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bill To"
                 android:textSize="12sp" android:textColor="@color/textColor"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/divider_line_color_estimates"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginTop="4dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_view_invoice_summary_customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tusiime Georgia"
                        android:textSize="12sp"
                        android:textColor="@color/textColor"
                        />

                    <TextView
                        android:id="@+id/text_view_invoice_summary_customer_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kleiner Parkers Farm"
                         android:textSize="12sp" android:textColor="@color/textColor"/>

                    <TextView
                        android:id="@+id/text_view_invoice_summary_customer_street"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nevada City"
                         android:textSize="12sp" android:textColor="@color/textColor"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_view_invoice_summary_city_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Karlin Farms"
                             android:textSize="12sp" android:textColor="@color/textColor"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Estimate Date :"
                                 android:textSize="12sp" android:textColor="@color/textColor"/>

                            <TextView
                                android:id="@+id/text_view_crop_invoice_estimate_summary_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="08-03-2019"
                                 android:textSize="12sp" android:textColor="@color/textColor"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/estimate_expiry_date"
                                 android:textSize="12sp"
                                android:textColor="@color/textColor"/>

                            <TextView
                                android:id="@+id/text_view_crop_invoice_due_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                 android:textSize="12sp" android:textColor="@color/textColor"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Ref # :"
                                 android:textSize="12sp" android:textColor="@color/textColor"/>

                            <TextView
                                android:id="@+id/text_view_crop_invoice_reference_number"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                 android:textSize="12sp" android:textColor="@color/textColor"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TableRow
                        android:id="@+id/tableRow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/crop_invoice_table_border"
                       

                        >

                        <LinearLayout
                            android:layout_width="20dp"
                            android:layout_height="28dp"
                           
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_view_crop_invoice_count"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                               
                                android:gravity="center"
                                android:text="#"
                                android:textSize="12sp"
                                
                                android:textColor="@color/textColor"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="28dp"
                           
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_view_crop_invoice_date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                               
                                android:gravity="center"
                                android:text="@string/item_details_label"
                                 android:textSize="12sp" android:textColor="@color/textColor"

                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="28dp"
                           
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_view_crop_invoice_age"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                               
                                android:gravity="center"
                                android:text="@string/quantity"
                                android:textSize="12sp"
                                android:textColor="@color/textColor"

                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="65dp"
                            android:layout_height="28dp"
                           
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_view_crop_invoice_weight"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                               
                                android:gravity="center"
                                android:text="@string/rate"
                                 android:textSize="12sp" android:textColor="@color/textColor"

                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="28dp"
                           
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_view_crop_invoice_height"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                               
                                android:gravity="center"
                                android:text="@string/label_tax"
                                 android:textSize="12sp" android:textColor="@color/textColor"

                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/crop_estimate_small_column_size"
                            android:layout_height="28dp"
                           
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_view_crop_invoice_bcs"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                               
                                android:gravity="center"
                                android:text="@string/amount_label"
                                 android:textColor="@color/textColor"
                                android:textSize="12sp"
                                 />
                        </LinearLayout>


                    </TableRow>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyc_view_crop_invoice_item_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:text="@string/sub_total"
                          android:textColor="@color/textColor"
                        android:textSize="12sp"
                         />

                    <TextView

                        android:id="@+id/txt_view_crop_estimate_sub_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                         android:textSize="12sp" android:textColor="@color/textColor"
                        android:text="@string/default_numeric_value" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="65dp"
                        android:text="@string/discount"
                         android:textSize="12sp" android:textColor="@color/textColor"

                         />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="(-)"
                         android:textSize="12sp" android:textColor="@color/textColor"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_view_crop_estimate_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textColor="@color/red"
                            android:text="@string/default_numeric_value"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:text="@string/shipping_charges"
                         android:textSize="12sp" android:textColor="@color/textColor"

                         />



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_view_crop_estimate_shipping_charges"
                            android:layout_width="74dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textSize="12sp"
                            android:textColor="@color/textColor"
                            android:text="@string/default_numeric_value" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/divider_line_color_estimates"
                android:orientation="horizontal"
                android:padding="8dp">
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    android:layout_weight="0.5"
                    >
                        <TextView
                            android:id="@+id/txt_view_crop_estimate_total_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/total_ugx"

                            android:textColor="@color/textColor"
                            android:textSize="12sp"
                            android:layout_weight="0.4"
                            />

                        <TextView

                            android:id="@+id/txt_view_crop_estimate_total"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:layout_weight="0.6"
                             android:textSize="12sp"
                            android:textColor="@color/textColor"
                            android:text="@string/default_numeric_value" />
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/txt_view_crop_estimate_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:textColor="@color/textColor"
                android:text="@string/looking_forward_for_your_business" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.ConstraintLayout>