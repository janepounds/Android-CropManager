<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.CropBillPreviewActivity">

    <ScrollView
        android:id="@+id/scroll_view_bill_summary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_view_crop_invoice_estimate_farm_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Karlin Farms"
                        android:textSize="12sp"
                        android:textColor="@color/textColor"
                        />
                    <TextView
                        android:id="@+id/text_view_crop_invoice_estimate_user_street"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Namungona"
                        android:textSize="12sp"
                        android:textColor="@color/textColor"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:textSize="12sp" android:textColor="@color/textColor">
                        <TextView
                            android:id="@+id/text_view_crop_invoice_estimate_user_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kampala"
                            android:textSize="12sp" android:textColor="@color/textColor"/>
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" , "
                            android:textSize="12sp"
                            android:textColor="@color/textColor"/>
                        <TextView
                            android:id="@+id/text_view_crop_invoice_estimate_user_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Uganda"
                            android:textSize="12sp" android:textColor="@color/textColor"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="end"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"
                                android:text="BILL"/>

                            <TextView
                                android:id="@+id/text_view_crop_bill_preview_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"
                                android:text="#BL-0001"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"
                                android:text="Balance Due"/>
                            <TextView
                                android:id="@+id/text_view_crop_bill_balance_due"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"
                                android:text="UGX 367283"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bill From"
                android:textColor="@color/textColor"
                android:textSize="12sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/divider_line_color_estimates"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">



                    <TextView
                        android:id="@+id/text_view_bill_preview_supplier_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kleiner Parkers Farm"
                        android:textColor="@color/textColor"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/text_view_bill_preview_supplier_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Uhuru Sserubiri"
                        android:textColor="@color/textColor"
                        android:textSize="12sp"/>


                    <TextView
                        android:id="@+id/text_view_bill_preview_supplier_street"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nevada City"
                        android:textColor="@color/textColor"
                        android:textSize="12sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_view_bill_preview_supplier_city_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Karlin Farms"
                            android:textColor="@color/textColor"
                            android:textSize="12sp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Order Number :"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/text_view_crop_bill_preview_order_number"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0001"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/invoice_terms_label"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/text_view_crop_bill_preview_bill_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="2019-03-20"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/invoice_due_date"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/text_view_crop_bill_preview_due_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="2019-04-20"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Terms :"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/text_view_crop_bill_preview_terms"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Net 30"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/crop_invoice_table_border"
                        >

                        <LinearLayout
                            android:layout_width="20dp"
                            android:layout_height="28dp"
                            android:background="@drawable/crop_invoice_table_border"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/crop_invoice_table_border"
                                android:gravity="center"
                                android:text="#"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="28dp"
                            android:background="@drawable/crop_invoice_table_border"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/crop_invoice_table_border"
                                android:gravity="center"
                                android:text="@string/item_details_label"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="28dp"
                            android:background="@drawable/crop_invoice_table_border"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/crop_invoice_table_border"
                                android:gravity="center"
                                android:text="@string/quantity"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="65dp"
                            android:layout_height="28dp"
                            android:background="@drawable/crop_invoice_table_border"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/crop_invoice_table_border"
                                android:gravity="center"
                                android:text="@string/rate"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="28dp"
                            android:background="@drawable/crop_invoice_table_border"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/crop_invoice_table_border"
                                android:gravity="center"
                                android:text="@string/label_tax"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"
                                 />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/crop_estimate_small_column_size"
                            android:layout_height="28dp"
                            android:background="@drawable/crop_invoice_table_border"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/crop_invoice_table_border"
                                android:gravity="center"
                                android:text="@string/amount_label"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"
                                 />
                        </LinearLayout>


                    </TableRow>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyc_view_crop_invoice_item_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:text="@string/sub_total"

                        android:textColor="@color/textColor"
                        android:textSize="12sp"
                         />

                    <TextView

                        android:id="@+id/txt_view_crop_bill_preview_sub_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textColor="@color/textColor"
                        android:text="@string/default_numeric_value" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="65dp"
                        android:text="@string/discount"
                        android:textColor="@color/textColor"
                        android:textSize="12sp"
                         />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="(-)"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_view_crop_bill_preview_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textColor="@color/red"
                            android:text="@string/default_numeric_value"/>

                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView

                        android:id="@+id/txt_view_crop_estimate_total_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/total_ugx"

                        android:textColor="@color/textColor"
                        android:textSize="12sp"
                        />

                    <TextView

                        android:id="@+id/txt_view_crop_bill_preview_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textColor="@color/textColor"
                        android:text="@string/default_numeric_value" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:text="@string/payment_made_label"

                        android:textColor="@color/textColor"
                        android:textSize="12sp"
                         />

                    <TextView

                        android:id="@+id/txt_view_crop_bill_preview_payment_made"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textColor="@color/red"
                        android:text="@string/default_numeric_value" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_shapes"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:text="Balance Due"
                        android:textColor="@color/textColor"
                        android:textSize="12sp"
                         />

                    <TextView

                        android:id="@+id/txt_view_crop_bill_preview_balance_due"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textColor="@color/textColor"
                        android:text="@string/default_numeric_value" />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/txt_view_crop_bill_preview_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="12sp"
                android:text="Notes" />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                
                android:textSize="12sp"
                android:text="@string/thank_you_for_your_business" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>