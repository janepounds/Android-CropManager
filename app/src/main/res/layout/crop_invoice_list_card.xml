<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">







            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:id="@+id/txt_crop_invoice_card_customer_name"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#696666"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Kleiner Parker Firm" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginLeft="6dp"
                        >

                        <ImageView
                            android:id="@+id/img_crop_product_card_more"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:backgroundTint="@color/black"
                            android:textColor="@color/darker_gray"
                            app:srcCompat="@drawable/more_options_icon" />


                    </LinearLayout>




                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_crop_invoice_card_estimate_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="INV-001"
                            android:textColor="#696666"
                            android:textSize="14dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_marginLeft="5dp"
                            android:text="UGX"
                            android:textColor="@color/red"
                            android:textSize="14dp" />
                        <TextView
                            android:id="@+id/txt_crop_product_card_quantitty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:text="300,000"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/red"
                            android:textSize="14dp" />


                    </LinearLayout>


                </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_crop_invoice_card_invoice_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="08-03-2019"

                            android:textColor="#696666"
                            android:textSize="14dp" />


                        <TextView
                            android:id="@+id/txt_crop_invoice_card_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:layout_marginLeft="5dp"
                            android:text="DRAFT"
                            android:textColor="#696666"
                            android:textSize="14sp"
                            android:textStyle="bold"/>


                    </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order # :"
                        android:textColor="#696666"
                        android:textStyle="bold"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/txt_crop_invoice_card_order_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0002 "
                        android:textColor="#696666"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="14dp" />






                </LinearLayout>




            </LinearLayout>




    </LinearLayout>

</LinearLayout>