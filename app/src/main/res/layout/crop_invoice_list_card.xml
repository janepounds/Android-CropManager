<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="24dp"
        android:background="@color/whiteColor">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp">


                    <TextView
                        android:id="@+id/txt_crop_invoice_card_customer_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Kleiner Parker Firm "
                        android:layout_marginTop="16dp"
                        android:textColor="#000000"
                        android:layout_weight="0.6"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_weight="0.4"

                        >
                        <TextView
                            android:id="@+id/txt_crop_product_card_quantitty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="1dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="16dp"
                            android:text="UGX 300,000"
                            android:textColor="@color/estimates_card_currency_color"
                            android:textSize="14dp" />


                        <ImageView
                            android:id="@+id/img_crop_product_card_more"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:backgroundTint="@color/black"
                            android:textColor="@color/darker_gray"
                            app:srcCompat="@drawable/more_options_icon" />


                    </LinearLayout>





                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="#D2D3D2" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"

                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_crop_invoice_card_estimate_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="INV-001"
                            android:textColor="@color/estimates_card_text_color"
                            android:textSize="14dp" />



                    </LinearLayout>






                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_crop_invoice_card_invoice_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="08-03-2019"

                            android:textColor="@color/estimates_card_text_color"
                            android:textSize="14dp" />


                        <TextView
                            android:id="@+id/txt_crop_invoice_card_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:layout_marginLeft="5dp"
                            android:text="DRAFT"
                            android:textColor="@color/estimates_card_text_color"
                            android:textSize="14sp"
                            android:textStyle="bold"/>


                    </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order # :"
                        android:textColor="@color/estimates_card_text_color"
                        android:textStyle="bold"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/txt_crop_invoice_card_order_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0002 "
                        android:textColor="@color/estimates_card_text_color"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textSize="14dp" />






                </LinearLayout>









    </LinearLayout>

</LinearLayout>