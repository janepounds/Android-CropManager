<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pullToRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/colorAccentLight"
    android:orientation="vertical">

    <include
        android:id="@+id/myToolbar"
        layout="@layout/wallet_toolbar" />

   <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp" >

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:weightSum="36"
           android:paddingLeft="@dimen/dimen_10dp"
           android:paddingRight="@dimen/dimen_10dp"
           android:layout_marginBottom="@dimen/dimen_10dp"
           android:layout_marginTop="@dimen/dimen_5dp"
           android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="12"
               android:orientation="vertical"
               android:background="@drawable/profile_background"
               >

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginTop="120dp"
                   android:weightSum="12"
                   >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="3"
                   android:gravity="center"
                   android:text="4560"
                   android:textColor="@color/white"
                   android:fontFamily="@font/josefin_sans"
                   android:textSize="20sp"
                   android:textStyle="bold" />


               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="3"
                   android:gravity="center"
                   android:text="0046"
                   android:textColor="@color/white"
                   android:fontFamily="@font/josefin_sans"
                   android:textSize="20sp"
                   android:textStyle="bold" />


               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="3"
                   android:gravity="center"
                   android:text="0012"
                   android:textColor="@color/white"
                   android:fontFamily="@font/josefin_sans"
                   android:textSize="20sp"
                   android:textStyle="bold" />


               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="3"
                   android:gravity="center"
                   android:text="1203"
                   android:textColor="@color/white"
                   android:fontFamily="@font/josefin_sans"
                   android:textSize="20sp"
                   android:textStyle="bold" />

               </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal"
                    android:weightSum="12">

                    <TextView
                        android:id="@+id/wallet_username"
                        android:layout_height="@dimen/dimen_20dp"
                        android:layout_weight="6"
                        android:paddingLeft="20dp"
                        android:fontFamily="@font/josefin_sans"
                        android:textColor="@color/white"
                        android:text="Mutesasira Jovan"
                        android:textSize="11sp"
                        android:layout_width="0dp" />

                    <TextView
                        android:id="@+id/expiry_date"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dimen_20dp"
                        android:layout_weight="6"
                        android:layout_marginLeft="@dimen/dimen_30dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/josefin_sans"
                        android:text="10/22"
                        android:textSize="11sp" />
                </LinearLayout>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_weight="24"
               android:paddingTop="@dimen/dimen_10dp"
               android:paddingBottom="@dimen/dimen_20dp"
               android:gravity="center_vertical"
               android:layout_gravity="center_vertical"
               android:orientation="vertical">


               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="4.5"
                   android:paddingBottom="@dimen/dimen_10dp"
                   android:weightSum="6"
                   android:orientation="horizontal">

                   <LinearLayout
                       android:id="@+id/layout_balance1"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="3"
                       android:layout_marginRight="@dimen/dimen_10dp"
                       android:background="@drawable/rectangular_green_border"
                       android:orientation="vertical">


                       <TextView
                           android:id="@+id/wallet_balance"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:gravity="center"
                           android:onClick="openAddMoney"
                           android:layout_marginTop="5dp"
                           android:text="@string/current_balance_label"
                           android:textColor="@color/textColor"
                           android:textSize="@dimen/dimen_14sp"
                           android:fontFamily="@font/josefin_sans"
                           android:textAllCaps="true"
                           android:textStyle="bold" />

                       <TextView
                           android:id="@+id/crop_digital_wallet_amount"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:text="UGX 0"
                           android:fontFamily="@font/josefin_sans"
                           android:textColor="@color/textColor"
                           android:textSize="16sp" />

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="3"
                       android:layout_marginLeft="@dimen/dimen_10dp"
                       android:background="@drawable/rectangular_green_border"
                       android:backgroundTint="@color/colorPrimary"
                       android:orientation="vertical">


                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:gravity="center"
                           android:onClick="openTransfer"
                           android:layout_marginTop="5dp"
                           android:text="Card Balance"
                           android:textColor="@color/white"
                           android:textAllCaps="true"
                           android:fontFamily="@font/josefin_sans"
                           android:textSize="14sp"
                           android:textStyle="bold" />

                       <TextView
                           android:id="@+id/crad_balance_txt"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:gravity="center"
                           android:fontFamily="@font/josefin_sans"
                           android:text="UGX 0"
                           android:textColor="@color/white"
                           android:textSize="16sp" />

                   </LinearLayout>

               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1.5" >
                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="20dp"
                       android:gravity="center_vertical"
                       android:layout_gravity="center_vertical"
                       android:text="Quick Actions"
                       android:textColor="@color/textColor"
                       android:fontFamily="@font/josefin_sans"
                       android:textStyle="bold"
                       android:textSize="16sp" />
               </LinearLayout>

               <LinearLayout
                   android:id="@+id/home_icons_row_1"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="5"
                   android:paddingBottom="@dimen/dimen_10dp"
                   android:weightSum="6"
                   android:orientation="horizontal">

                   <LinearLayout
                       android:id="@+id/layout_wallet_add_money"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="3"
                       android:paddingLeft="@dimen/dimen_10dp"
                       android:paddingRight="@dimen/dimen_10dp"
                       android:gravity="center"
                       android:orientation="vertical">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:background="@drawable/solidwhite_shape"
                           android:onClick="openAddMoney">

                           <ImageButton
                               android:id="@+id/crop_img_add_money"
                               android:layout_width="match_parent"
                               android:layout_height="50dp"
                               android:layout_marginTop="5dp"
                               android:onClick="openAddMoney"
                               android:backgroundTint="@color/white"
                               android:src="@drawable/wallet_deposit"

                               />

                           <TextView
                               android:id="@+id/crop_txt_add_money"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:gravity="center"
                               android:onClick="openAddMoney"
                               android:text="Deposit"
                               android:layout_marginBottom="10dp"
                               android:textColor="@color/textColor"
                               android:fontFamily="@font/josefin_sans"
                               android:textStyle="bold" />
                       </LinearLayout>

                   </LinearLayout>

                   <LinearLayout
                       android:id="@+id/layout_wallet_transfer"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="3"
                       android:paddingLeft="@dimen/dimen_10dp"
                       android:paddingRight="@dimen/dimen_10dp"
                       android:gravity="center"
                       android:orientation="vertical">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:background="@drawable/solidwhite_shape"
                           android:onClick="openTransfer">

                           <ImageButton
                               android:id="@+id/crop_img_transfer"
                               android:layout_width="match_parent"
                               android:layout_height="50dp"
                               android:layout_weight="0.3"
                               android:layout_marginTop="5dp"
                               android:backgroundTint="@color/white"
                               android:onClick="openTransfer"
                               android:src="@drawable/wallet_transfer" />

                           <TextView
                               android:id="@+id/crop_txt_transfer"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:gravity="center"
                               android:onClick="openTransfer"
                               android:text="Transfer"
                               android:paddingBottom="10dp"
                               android:textColor="@color/textColor"
                               android:fontFamily="@font/josefin_sans"
                               android:textStyle="bold" />
                       </LinearLayout>

                   </LinearLayout>

               </LinearLayout>

               <LinearLayout
                   android:id="@+id/home_icons_row_2"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="5"
                   android:paddingBottom="@dimen/dimen_10dp"
                   android:weightSum="6"
                   android:orientation="horizontal">

                   <LinearLayout
                       android:id="@+id/layout_wallet_buy_food"
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="3"
                       android:paddingLeft="@dimen/dimen_10dp"
                       android:paddingRight="@dimen/dimen_10dp"
                       android:gravity="center"
                       android:orientation="vertical">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:background="@drawable/solidwhite_shape"
                           android:onClick="openTransactions" >

                           <ImageButton
                               android:layout_width="match_parent"
                               android:layout_height="50dp"
                               android:layout_marginTop="5dp"
                               android:backgroundTint="@color/white"
                               android:gravity="center"
                               android:onClick="openTransactions"
                               android:src="@drawable/wallet_transactions" />

                           <TextView
                               android:id="@+id/crop_txt_buy_inputs"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginBottom="10dp"
                               android:gravity="center"
                               android:onClick="openTransactions"
                               android:text="Transactions"
                               android:textColor="@color/textColor"
                               android:fontFamily="@font/josefin_sans"
                               android:textStyle="bold" />
                       </LinearLayout>
                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="3"
                       android:paddingLeft="@dimen/dimen_10dp"
                       android:paddingRight="@dimen/dimen_10dp"
                       android:gravity="center"
                       android:orientation="vertical">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:background="@drawable/solidwhite_shape"
                           android:onClick="openLoans" >

                           <ImageButton
                               android:layout_width="match_parent"
                               android:layout_height="50dp"
                               android:layout_marginTop="5dp"
                               android:layout_weight="0.3"
                               android:backgroundTint="@color/white"
                               android:onClick="openLoans"
                               android:src="@drawable/wallet_loan" />

                           <TextView

                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:gravity="center"
                               android:onClick="openLoans"
                               android:paddingBottom="10dp"
                               android:text="Loans"
                               android:textColor="@color/textColor"
                               android:fontFamily="@font/josefin_sans"
                               android:textStyle="bold" />

                       </LinearLayout>

                   </LinearLayout>

               </LinearLayout>

               <LinearLayout
                   android:id="@+id/home_icons_row_3"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="5"
                   android:paddingBottom="@dimen/dimen_10dp"
                   android:weightSum="6"
                   android:orientation="horizontal">

                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="3"
                       android:paddingLeft="@dimen/dimen_10dp"
                       android:paddingRight="@dimen/dimen_10dp"
                       android:gravity="center"
                       android:orientation="vertical">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:background="@drawable/solidwhite_shape"
                           android:onClick="comingsoon">

                           <ImageButton
                               android:layout_width="match_parent"
                               android:layout_height="50dp"
                               android:layout_marginTop="5dp"
                               android:backgroundTint="@color/white"
                               android:gravity="center"
                               android:onClick="comingsoon"
                               android:src="@drawable/coupon" />

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginBottom="10dp"
                               android:gravity="center"
                               android:onClick="comingsoon"
                               android:text="Coupons"
                               android:textColor="@color/textColor"
                               android:fontFamily="@font/josefin_sans"
                               android:textStyle="bold" />

                       </LinearLayout>

                   </LinearLayout>

                   <LinearLayout
                       android:layout_width="0dp"
                       android:layout_height="match_parent"
                       android:layout_weight="3"
                       android:paddingLeft="@dimen/dimen_10dp"
                       android:paddingRight="@dimen/dimen_10dp"
                       android:gravity="center"
                       android:orientation="vertical">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:background="@drawable/solidwhite_shape"
                           android:onClick="openBuy" >

                           <ImageButton
                               android:layout_width="match_parent"
                               android:layout_height="50dp"
                               android:layout_weight="0.3"
                               android:layout_marginTop="5dp"
                               android:backgroundTint="@color/white"
                               android:onClick="openBuy"
                               android:src="@drawable/wallet_buy" />

                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:gravity="center"
                               android:onClick="openBuy"
                               android:paddingBottom="10dp"
                               android:text="Buy"
                               android:textColor="@color/textColor"
                               android:fontFamily="@font/josefin_sans"
                               android:textStyle="bold" />
                       </LinearLayout>
                   </LinearLayout>


               </LinearLayout>


           </LinearLayout>

       </LinearLayout>

   </ScrollView>

</RelativeLayout>
