<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.myfarmnow.myfarmcrop.DailogFragments.farmrecords.gallery.AddPhotoInGalleryFragment">

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_20dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/add_animal_close"
                            android:layout_width="26.18dp"
                            android:layout_height="26.18dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/close" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/breeder_form_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/josefin_sans_semibold"
                            android:gravity="center"
                            android:text="Add Photo"
                            android:textAllCaps="true"
                            android:textColor="@color/blackText"
                            android:textSize="25sp"
                            android:textStyle="bold" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_30dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:fontFamily="@font/josefin_sans"
                            android:text="Upload Photo" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/edittext_corner"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/margin_10">

                            <EditText
                                android:id="@+id/gallery_text"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_margin="0dp"
                                android:layout_weight="0.8"
                                android:background="@android:color/transparent"
                                android:inputType="none"
                                android:paddingStart="@dimen/dimen_10dp"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/add_animal_photo"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.1"
                                android:background="@drawable/edittext_right_corners_green"
                                android:fontFamily="@font/josefin_sans"
                                android:gravity="center"
                                android:text="Browse"
                                android:textColor="@color/white"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height ="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="15dp">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/caption"
                                android:layout_marginBottom="4dp" />

                            <EditText
                                android:id="@+id/gallery_caption"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:paddingStart="@dimen/dimen_10dp"
                                android:background="@drawable/edittext_corner"
                                android:inputType="textMultiLine"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_30dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@drawable/rounded_corners_button">

                            <Button
                                android:id="@+id/add_animal_submit"
                                style="@style/Button"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:background="@android:color/transparent"
                                android:text="@string/add"
                                android:textAllCaps="true"
                                android:textColor="#ffffff"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>