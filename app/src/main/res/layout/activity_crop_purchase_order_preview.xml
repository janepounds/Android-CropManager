<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CropPurchaseOrderPreviewActivity">
    <ScrollView
        android:id="@+id/scroll_view_purchase_order_summary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_view_crop_invoice_estimate_farm_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Karlin Farms"
                        android:textSize="12sp"
                        android:textColor="@color/textColor"
                        />
                    <TextView
                        android:id="@+id/text_view_crop_invoice_estimate_user_street"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Namungona"
                        android:textSize="12sp"
                        android:textColor="@color/textColor"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:textSize="12sp" android:textColor="@color/textColor">
                        <TextView
                            android:id="@+id/text_view_crop_invoice_estimate_user_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kampala"
                            android:textSize="12sp" android:textColor="@color/textColor"/>
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" , "
                            android:textSize="12sp"
                            android:textColor="@color/textColor"/>
                        <TextView
                            android:id="@+id/text_view_crop_invoice_estimate_user_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Uganda"
                            android:textSize="12sp" android:textColor="@color/textColor"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="end"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="PURCHASE ORDER"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/text_view_crop_purchase_order_summary_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"
                                android:text="#P0-0001"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supplier Address"
                    android:textColor="@color/textColor"
                    android:textSize="12sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:background="@color/divider_line_color_estimates"/>

                <TextView
                    android:id="@+id/text_view_purchase_order_summary_supplier_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adam Farms Ltd"
                    android:textColor="@color/textColor"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/text_view_purchase_order_summary_supplier_street"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kyambogo"
                    android:textColor="@color/textColor"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/text_view_purchase_order_summary_supplier_city_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kampala, Uganda"
                    android:textColor="@color/textColor"
                    android:textSize="12sp"/>


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deliver To"
                android:textColor="@color/textColor"
                android:textSize="12sp"
                android:layout_marginTop="8dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/divider_line_color_estimates"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
               >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">



                    <TextView
                        android:id="@+id/text_view_purchase_order_summary_customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Karlin Jeff"
                        android:textColor="@color/textColor"
                        android:textSize="12sp"/>


                    <TextView
                        android:id="@+id/text_view_purchase_order_summary_customer_street"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mbarara University"
                        android:textColor="@color/textColor"
                        android:textSize="12sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_view_purchase_order_summary_customer_city_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kampala, Uganda"
                            android:textColor="@color/textColor"
                            android:textSize="12sp"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Shipment Preference :"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/text_view_crop_purchase_order_summary_delivery_method"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="DHL Delivery"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Purchase Date :"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/text_view_crop_purchase_order_summary_purchase_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="08-03-2019"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Delivery Date :"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/text_view_crop_purchase_order_summary_delivery_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="20-03-2019"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Ref # :"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"/>

                            <TextView
                                android:id="@+id/text_view_crop_purchase_order_summary_reference_number"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0001"
                                android:textColor="@color/textColor"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/crop_invoice_table_border"

                        >

                        <LinearLayout
                            android:layout_width="20dp"
                            android:layout_height="28dp"
                            android:background="@drawable/crop_invoice_table_border"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/crop_invoice_table_border"
                                android:gravity="center"
                                android:text="#"
                                android:textColor="@color/textColor"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="28dp"
                            android:background="@drawable/crop_invoice_table_border"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/crop_invoice_table_border"
                                android:gravity="center"
                                android:text="@string/item_details_label"
                                android:textColor="@color/textColor"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="28dp"
                            android:background="@drawable/crop_invoice_table_border"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/crop_invoice_table_border"
                                android:gravity="center"
                                android:text="@string/quantity"
                                android:textColor="@color/textColor"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="65dp"
                            android:layout_height="28dp"
                            android:background="@drawable/crop_invoice_table_border"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/crop_invoice_table_border"
                                android:gravity="center"
                                android:text="@string/rate"
                                android:textColor="@color/textColor"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="28dp"
                            android:background="@drawable/crop_invoice_table_border"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/crop_invoice_table_border"
                                android:gravity="center"
                                android:text="@string/label_tax"
                                android:textColor="@color/textColor"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/crop_estimate_small_column_size"
                            android:layout_height="28dp"
                            android:background="@drawable/crop_invoice_table_border"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/crop_invoice_table_border"
                                android:gravity="center"
                                android:text="@string/amount_label"
                                android:textColor="@color/textColor"
                                android:textSize="12sp" />
                        </LinearLayout>


                    </TableRow>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyc_view_crop_invoice_item_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:text="@string/sub_total"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                       />

                    <TextView

                        android:id="@+id/txt_view_crop__purchase_order_summary_sub_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="@string/default_numeric_value" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="65dp"
                        android:text="@string/discount"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                       />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="(-)"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_view_crop__purchase_order_summary_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textColor="@color/red"
                            android:text="@string/default_numeric_value"/>

                    </LinearLayout>
                </LinearLayout>







            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/divider_line_color_estimates"
                android:orientation="horizontal"
                android:padding="8dp">
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    android:layout_weight="0.5"
                    >
                    <TextView

                        android:id="@+id/txt_view_crop_estimate_total_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/total_ugx"

                        android:textColor="@color/textColor"
                        android:textSize="12sp"
                        />

                    <TextView

                        android:id="@+id/txt_view_crop_purchase_order_summary_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_weight="0.6"
                        android:textSize="12sp"
                        android:textColor="@color/textColor"
                        android:text="@string/default_numeric_value" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/text_view_crop_purchase_order_summary_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/textColor"
                android:textSize="12sp"
                android:text="Notes" />
            <TextView
                android:id="@+id/text_view_crop_purchase_order_summary_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:text="Terms And Conditions" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>