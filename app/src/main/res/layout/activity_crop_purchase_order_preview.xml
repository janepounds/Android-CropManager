<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CropPurchaseOrderPreviewActivity">
    <ScrollView
        android:id="@+id/scroll_view_purchase_order_summary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/layout_purchase_order_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_view_crop_purchase_order_summary_customer_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Karlin Farms"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mbarara"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kampala, Uganda"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="end"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="PURCHASE ORDER"/>

                            <TextView
                                android:id="@+id/text_view_crop_purchase_order_summary_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="#P0-0001"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Supplier Address"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/text_view_purchase_order_summary_supplier_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adam Farms Ltd"/>
                <TextView
                    android:id="@+id/text_view_purchase_order_summary_supplier_street"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kyambogo"/>

                <TextView
                    android:id="@+id/text_view_purchase_order_summary_supplier_city_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kampala, Uganda"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deliver To"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/text_view_purchase_order_summary_customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Karlin Jeff" />


                    <TextView
                        android:id="@+id/text_view_purchase_order_summary_customer_street"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mbarara University" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text_view_purchase_order_summary_customer_city_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kampala, Uganda" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Shipment Preference :" />

                            <TextView
                                android:id="@+id/text_view_crop_purchase_order_summary_delivery_method"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="DHL Delivery" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Purchase Date :" />

                            <TextView
                                android:id="@+id/text_view_crop_purchase_order_summary_purchase_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="08-03-2019" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Delivery Date :" />

                            <TextView
                                android:id="@+id/text_view_crop_purchase_order_summary_delivery_date"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"

                                android:text="20-03-2019" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Ref # :" />

                            <TextView
                                android:id="@+id/text_view_crop_purchase_order_summary_reference_number"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0001" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TableRow
                        android:id="@+id/tableRow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/crop_invoice_table_border"

                        >

                        <LinearLayout
                            android:layout_width="20dp"
                            android:layout_height="28dp"
                            android:background="@drawable/crop_invoice_table_border"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_view_crop_invoice_count"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/crop_invoice_table_border"
                                android:gravity="center"
                                android:text="#"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="28dp"
                            android:background="@drawable/crop_invoice_table_border"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_view_crop_invoice_date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/crop_invoice_table_border"
                                android:gravity="center"
                                android:text="@string/item_details_label"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="70dp"
                            android:layout_height="28dp"
                            android:background="@drawable/crop_invoice_table_border"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_view_crop_invoice_age"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/crop_invoice_table_border"
                                android:gravity="center"
                                android:text="@string/quantity"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="65dp"
                            android:layout_height="28dp"
                            android:background="@drawable/crop_invoice_table_border"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_view_crop_invoice_weight"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/crop_invoice_table_border"
                                android:gravity="center"
                                android:text="@string/rate"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="60dp"
                            android:layout_height="28dp"
                            android:background="@drawable/crop_invoice_table_border"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_view_crop_invoice_height"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/crop_invoice_table_border"
                                android:gravity="center"
                                android:text="@string/label_tax"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="@dimen/crop_estimate_small_column_size"
                            android:layout_height="28dp"
                            android:background="@drawable/crop_invoice_table_border"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_view_crop_invoice_bcs"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/crop_invoice_table_border"
                                android:gravity="center"
                                android:text="@string/amount_label"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>


                    </TableRow>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyc_view_crop_invoice_item_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:text="@string/sub_total"

                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView

                        android:id="@+id/txt_view_crop__purchase_order_summary_sub_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="@string/default_numeric_value" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="65dp"
                        android:text="@string/discount"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="(-)"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_view_crop__purchase_order_summary_discount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textColor="@color/red"
                            android:text="@string/default_numeric_value"/>

                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_shapes"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="40dp"
                        android:text="@string/total_ugx"

                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView

                        android:id="@+id/txt_view_crop_purchase_order_summary_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="@string/default_numeric_value" />

                </LinearLayout>



            </LinearLayout>

            <TextView
                android:id="@+id/text_view_crop_purchase_order_summary_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Notes" />
            <TextView
                android:id="@+id/text_view_crop_purchase_order_summary_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Terms And Conditions" />


        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>