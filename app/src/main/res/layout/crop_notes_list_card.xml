<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="@color/black"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitXY"
                android:src="@drawable/treatment_kit" />

            <View
                android:id="@+id/txt_view_crop_scouting_card_line"
                android:layout_width="1dp"
                android:layout_height="135dp"
                android:layout_marginStart="16dp"
                android:background="@color/black"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_view_crop_notes_card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="20-08-2018"
                android:textSize="18sp"
                android:textColor="@color/blackText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/black_border"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="0dp"
                    android:padding="8dp">

                    <TextView

                        android:id="@+id/txt_view_crop_notes_card_category"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:text="Maintenance"
                        android:textSize="18sp"
                        android:layout_weight="0.9"
                        android:textColor="@color/blackText"
                        />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_weight="0.1"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/img_crop_notes_card_more"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/more_options_icon" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="0dp"
                    android:padding="8dp"
                    >

                    <TextView
                        android:id="@+id/txt_view_crop_notes_card_notes"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:inputType="textMultiLine"
                        android:text="The activity was serviced but still has some weakness "
                        android:textColor="@color/blackText"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>