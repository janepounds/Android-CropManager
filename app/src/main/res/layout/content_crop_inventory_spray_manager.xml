<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.farmrecords.CropInventorySprayManagerActivity"
    tools:showIn="@layout/activity_crop_inventory_spray_manager">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

			<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                   android:layout_marginRight="8dp">



                     <EditText
                        android:id="@+id/txt_crop_spray_date_of_purchase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:background="@drawable/input_shapes_grey_spinner"
                        android:hint="Purchase Date"
                        android:inputType="none"
                        android:focusable="false"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

			<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/input_shapes_grey_spinner"
					android:padding="3.4dp">
                    <Spinner
                        android:id="@+id/sp_crop_spray_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:entries="@array/crop_spray_type"
                        android:hint="Enter.."
                        />
			</LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                   android:layout_marginRight="8dp">



                    <EditText
                        android:id="@+id/txt_crop_spray_spray_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:background="@drawable/input_shapes"
                        android:hint="Spray Name.."
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >



                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_shapes_grey_spinner"
                android:padding="3.4dp">
                    <Spinner
                        android:id="@+id/spinner_crop_spray_unit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/crop_spray_usage_units"
                        android:hint="Units"
                        />
                        </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txt_crop_spray_qty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Quantity"
                        android:layout_weight="0.7"
                        android:inputType="number|numberDecimal"
                        android:background="@drawable/input_shapes"
                        android:textSize="14sp"
                        android:visibility="visible" />

                <TextView
                    android:id="@+id/txt_crop_spray_units"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ML"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_weight="0.3"
                    android:textSize="14sp"
                    android:background="@color/colorPrimary" />





            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
               android:padding="3.4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginRight="8dp">



                    <EditText
                        android:id="@+id/txt_crop_spray_batch_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Batch"
                        android:inputType="text"
                        android:background="@drawable/input_shapes"
                        android:textSize="14sp"
                        android:visibility="visible" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                   >



                    <EditText
                        android:id="@+id/txt_crop_spray_cost"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/input_shapes"
                        android:ems="10"
                        android:layout_weight="0.7"
                        android:hint="Cost"
                        android:inputType="number"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="UGX"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_weight="0.3"
                        android:textSize="14sp"
                        android:background="@color/colorPrimary" />

                </LinearLayout>


            </LinearLayout>






                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3.4dp"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/txt_crop_spray_supplier"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:background="@drawable/input_shapes"
                        android:hint="Supplier.."
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="days"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:layout_weight="0.1"
                        android:background="@drawable/input_shapes_grey_units_right" />

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="3.4dp"
                    android:orientation="vertical">



                    <EditText
                        android:id="@+id/txt_crop_pray_exp_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:background="@drawable/input_shapes_grey_spinner"
                        android:hint="Expiry Date"
                        android:focusable="false"
                        android:textSize="14sp" />

                </LinearLayout>


            </LinearLayout>


            <Button
                android:id="@+id/btn_save"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:backgroundTint="@color/colorPrimary"
                android:drawableTint="#ffffff"
                android:text="submit"
                android:textAllCaps="true"
                android:background="@drawable/rounded_corners_button"
                android:textColor="#ffffff" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>