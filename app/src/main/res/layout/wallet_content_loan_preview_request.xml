<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccentLight"
    tools:context=".activities.wallet.WalletLoanPreviewRequest"
    tools:showIn="@layout/wallet_loan_preview_request">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccentLight"
        tools:context=".MainActivity"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/back_black_24dp"
                android:layout_marginLeft="0dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Confirm Details"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="12dp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="80dp"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Details"
            android:textSize="@dimen/dimen_20dp"
            android:gravity="left"
            android:paddingLeft="5dp"
            android:fontFamily="@font/josefin_sans"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>

        <com.kofigyan.stateprogressbar.StateProgressBar
            android:id="@+id/loan_progress_bar_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:spb_currentStateNumber="two"
            app:spb_maxStateNumber="three"
            android:layout_marginTop="@dimen/dimen_20dp"
            app:spb_stateBackgroundColor="#BDBDBD"
            app:spb_stateForegroundColor="@color/colorPrimary"
            app:spb_stateNumberBackgroundColor="#808080"
            app:spb_stateNumberForegroundColor="#eeeeee"
            app:spb_currentStateDescriptionColor="@color/colorPrimary"
            app:spb_stateDescriptionColor="#808080"
            app:spb_animateToCurrentProgressState="true"
            app:spb_checkStateCompleted="true"/>
        <TextView
            android:id="@+id/text_view_error_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insufficient Funds!"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/device_problem"
            android:visibility="gone"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/white"
            android:padding="@dimen/dimen_20dp"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_10"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Amount"
                    android:textSize="14sp"
                    android:fontFamily="@font/josefin_sans"
                    android:textColor="@color/textColor"
                    android:layout_weight="0.4"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:layout_weight="0.4"/>

                <TextView
                    android:id="@+id/text_view_loan_preview_amount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:fontFamily="@font/josefin_sans"
                    android:text="UGX 80,000"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Interest Rate"
                    android:textSize="14sp"
                    android:fontFamily="@font/josefin_sans"
                    android:textColor="@color/textColor"
                    android:layout_weight="0.4"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textSize="18sp"
                    android:fontFamily="@font/josefin_sans"
                    android:textColor="@color/textColor"
                    android:gravity="center"
                    android:layout_weight="0.4"/>
                <TextView
                    android:id="@+id/text_view_loan_preview_interest_rate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="8%"
                    android:textSize="14sp"
                    android:fontFamily="@font/josefin_sans"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="0.5"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="90dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Duration"
                    android:textSize="14sp"
                    android:fontFamily="@font/josefin_sans"
                    android:textColor="@color/textColor"
                    android:layout_weight="0.4"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textSize="18sp"
                    android:fontFamily="@font/josefin_sans"
                    android:textColor="@color/textColor"
                    android:gravity="center"
                    android:layout_weight="0.4"/>
                <TextView
                    android:id="@+id/text_view_loan_preview_duration"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="3 Weeks"
                    android:textSize="14sp"
                    android:fontFamily="@font/josefin_sans"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="0.5"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="130dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Due Date"
                    android:textSize="14sp"
                    android:fontFamily="@font/josefin_sans"
                    android:textColor="@color/textColor"
                    android:layout_weight="0.4"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textSize="18sp"
                    android:fontFamily="@font/josefin_sans"
                    android:textColor="@color/textColor"
                    android:gravity="center"
                    android:layout_weight="0.4"/>
                <TextView
                    android:id="@+id/text_view_loan_preview_due_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="29/10/2020"
                    android:textSize="14sp"
                    android:fontFamily="@font/josefin_sans"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="0.5"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="170dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Due Amount"
                    android:textSize="14sp"
                    android:fontFamily="@font/josefin_sans"
                    android:textColor="@color/textColor"
                    android:layout_weight="0.4"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text=":"
                    android:textSize="18sp"
                    android:fontFamily="@font/josefin_sans"
                    android:textColor="@color/textColor"
                    android:gravity="center"
                    android:layout_weight="0.4"/>
                <TextView
                    android:id="@+id/text_view_loan_preview_due_amount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="UGX 96400"
                    android:textSize="14sp"
                    android:fontFamily="@font/josefin_sans"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="0.5"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginTop="220dp"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:background="@drawable/rounded_corners_button"
                android:layout_height="40dp"
                >
                <Button
                    android:id="@+id/btn_loan_next_step"
                    android:text="Confirm"
                    android:layout_width="match_parent"
                    android:layout_height="40dip"
                    android:background="@color/transparent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/button_text_size"
                    />
                <ImageView
                    android:layout_width="30dip"
                    android:layout_height="30dip"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dip"
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/ic_right_arrow">

                </ImageView>
            </FrameLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>