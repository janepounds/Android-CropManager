<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"

    android:paddingTop="180dp"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.CropCalculatorsActivity"
    tools:showIn="@layout/activity_crop_calculators">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/layout_crop_calculators_revenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="90dp"
            android:layout_weight="1"
            android:background="@color/whiteColor"
            android:onClick="openRevenueCalculator"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"

                android:padding="10dp"
                android:src="@drawable/revenue_calculator" />

            <TextView
                android:id="@+id/tv_matings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@color/whiteColor"
                android:gravity="center"

                android:paddingBottom="5dp"
                android:text="REVENUE\nCALCULATOR"
                android:textAllCaps="true"
                android:textColor="#000000" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@color/whiteColor"
            android:onClick="openNutrientsCalculator"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"

                android:padding="10dp"
                android:src="@drawable/nutrient_removal" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@color/whiteColor"
                android:gravity="center"

                android:paddingBottom="5dp"
                android:text="NUTRIENT \n REMOVAL"
                android:textAllCaps="true"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@color/whiteColor"
            android:onClick="openFertilizerCalculator"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"

                android:padding="10dp"
                android:src="@drawable/fertilizer_application" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@color/whiteColor"
                android:gravity="center"

                android:paddingBottom="5dp"
                android:text="FERTILIZER\nESTIMATOR"
                android:textAllCaps="true"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>