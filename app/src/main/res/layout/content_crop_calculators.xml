<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.CropCalculatorsActivity"
    tools:showIn="@layout/activity_crop_calculators">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <LinearLayout
            android:id="@+id/layout_crop_calculators_revenue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/whiteColor"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:onClick="openRevenueCalculator">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"

                android:padding="10dp"
                android:src="@drawable/crops" />

            <TextView
                android:id="@+id/tv_matings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@color/whiteColor"
                android:gravity="center"

                android:paddingBottom="5dp"
                android:text="REVENUE"
                android:textAllCaps="true"
                android:textColor="#000000" />
            
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_crop_calculators_fertilizer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/whiteColor"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:onClick="openFertilizerCalculator">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"

                android:padding="10dp"
                android:src="@drawable/crops" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@color/whiteColor"
                android:gravity="center"

                android:paddingBottom="5dp"
                android:text="FERTILIZER"
                android:textAllCaps="true"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>