<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.farmrecords.CropInventoryFertilizerManagerActivity"
    tools:showIn="@layout/activity_crop_inventory_fertilizer_manager">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/txt_crop_fertilizer_date_of_purchase"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:hint="Select"
                        android:background="@drawable/input_shapes_grey_spinner"
                        android:inputType="none"
                        android:focusable="false"
                        android:textSize="14sp" />

                    <Spinner
                        android:id="@+id/spinner_crop_fertilizer_fertilizer_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:entries="@array/crop_fertilizers_types"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/txt_crop_fertilizer_fertilizer_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:hint="Fertilizer Name"
                        android:background="@drawable/input_shapes"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="N-P-K"
                        android:layout_weight="1"
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txt_crop_fertilizer_npk_n"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter.."
                        android:text="@string/default_numeric_value"
                        android:inputType="number|numberDecimal"

                        android:layout_weight="1"
                        android:background="@drawable/input_shapes"
                        android:layout_marginRight="5dp"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/txt_crop_fertilizer_npk_p"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter.."
                        android:text="@string/default_numeric_value"
                        android:inputType="number|numberDecimal"

                        android:layout_weight="1"
                        android:layout_marginRight="5dp"

                        android:background="@drawable/input_shapes"
                        android:textSize="14sp" />
                    <EditText
                        android:id="@+id/txt_crop_fertilizer_npk_k"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter.."
                        android:text="@string/default_numeric_value"
                        android:inputType="number|numberDecimal"

                        android:layout_weight="1"
                        android:background="@drawable/input_shapes"
                        android:textSize="14sp" />


            </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">



                    <Spinner
                        android:id="@+id/spinner_crop_fertilizer_usage_unit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/crop_fertilizers_usage_units"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_shapes_grey_spinner"
                        android:padding="3.4dp">
                        <EditText
                            android:id="@+id/txt_crop_fertilizer_qty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:hint="Quantity"
                            android:background="@drawable/input_shapes"
                            android:inputType="number|numberDecimal"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt_crop_fertilizer_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Kg"
                            android:layout_weight="0.2"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:background="@color/colorPrimary"
                            android:gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">




                    <EditText
                        android:id="@+id/txt_crop_fertilizer_batch_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Batch #"
                        android:background="@drawable/input_shapes"
                        android:layout_marginRight="10dp"
                        android:textSize="14sp" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/txt_crop_fertilizer_unit_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:hint="Cost"
                        android:layout_weight="0.5"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:background="@drawable/input_shapes"

                        />

                    <TextView
                        android:id="@+id/txt_crop_fertilizer_currency"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/ugx"
                        android:layout_weight="0.1"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:background="@color/colorPrimary"
                        android:gravity="center"/>

                </LinearLayout>
            </LinearLayout>





