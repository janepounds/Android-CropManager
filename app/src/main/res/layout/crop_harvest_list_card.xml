<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#F4F4F4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:orientation="vertical">



            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitXY"
                android:src="@drawable/harvesting" />

            <View
                android:id="@+id/txt_view_crop_harvest_card_line"
                android:layout_width="1dp"
                android:layout_height="260dp"
                android:layout_marginStart="16dp"
                android:background="#E7EAE7"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_view_crop_harvest_card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="8dp"
                android:text="20-08-2018"
                android:textSize="18sp"
                android:textColor="#A6C0A7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="20dp"
                android:background="@drawable/input_shapes_crops_card"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_margin="0dp"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:layout_marginStart="28dp"
                        android:text="@string/harvest"
                        android:textColor="@color/blackText"
                        android:textSize="18sp" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="0.1"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/img_crop_harvest_card_more"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/more_options_icon" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="237dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="5dp"
                    android:background="#D2D3D2" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="0dp"
                    android:padding="4dp"

                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Method : "
                        android:textColor="@color/blackText"
                        android:textSize="14sp"
                        android:layout_marginStart="38dp"
                        android:layout_weight="0.4"
                        />

                    <TextView
                        android:id="@+id/txt_view_crop_harvest_card_method"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:layout_marginStart="6dp"
                        android:textColor="#899889"
                        android:text="Hand Picking"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="0dp"
                    android:padding="4dp"

                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="38dp"
                        android:layout_weight="0.4"
                        android:text="Quantity : "
                        android:textColor="@color/blackText"
                        android:textSize="14sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.6"
                    android:layout_marginStart="6dp"
                    >
                    <TextView
                        android:id="@+id/txt_view_crop_harvest_card_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200 "
                        android:layout_weight="0.2"
                        android:textColor="#899889"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/txt_view_crop_harvest_card_units"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:text=" tonnes"
                        android:textColor="#899889" />
                </LinearLayout>
                </LinearLayout>


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="0dp"
                    android:padding="4dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="Status : "
                        android:layout_marginStart="38dp"
                        android:textColor="@color/blackText"
                        />

                    <TextView
                        android:id="@+id/txt_view_crop_harvest_card_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:layout_marginStart="6dp"
                        android:text="Sold"
                        android:textColor="#899889" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="0dp"
                    android:padding="4dp">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:layout_marginStart="38dp"
                        android:text="Cost : "
                        android:textColor="@color/blackText"
                         />

                    <TextView
                        android:id="@+id/txt_view_crop_harvest_card_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:layout_marginStart="6dp"
                        android:text="UGX 150,000"
                        android:textColor="#899889" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_crop_harvest_card_income_generated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="0dp"
                    android:padding="4dp">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="38dp"
                        android:layout_weight="0.4"
                        android:text="Income Generated :"
                        android:textColor="@color/blackText" />

                    <TextView
                        android:id="@+id/txt_view_crop_harvest_card_income_generated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:layout_marginStart="6dp"
                        android:text="UGX 150,000"
                        android:textColor="#899889" />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="end"
                android:padding="0dp"
                android:layout_marginEnd="8dp"

                android:id="@+id/layout_crop_harvest_card_show_hide"
                android:background="#B6C5B6"
                >

                <ImageView
                    android:id="@+id/img_crop_harvest_card_show_crops"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:backgroundTint="@color/black"
                    android:textColor="#D2DDD5"
                    android:layout_marginEnd="18.17dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/arrow_drop_down" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_crop_harvest_expand"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="#B6C5B6"
                android:padding="4dp"
                android:visibility="gone"
                >


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>