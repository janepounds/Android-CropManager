<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/gray">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="@color/black"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitXY"
                android:src="@drawable/harvesting" />

            <View
                android:id="@+id/txt_view_crop_harvest_card_line"
                android:layout_width="1dp"
                android:layout_height="195dp"
                android:layout_marginStart="16dp"
                android:background="@color/black"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_view_crop_harvest_card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="20-08-2018"
                android:textSize="18sp"
                android:textColor="@color/blackText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/black_border"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="0dp"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:text="@string/harvest"
                        android:textColor="@color/blackText"
                        android:textSize="18sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_weight="0.1"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/img_crop_harvest_card_more"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/more_options_icon" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="0dp"
                    android:padding="8dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Method : "
                        android:textColor="@color/blackText"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:id="@+id/txt_view_crop_harvest_card_method"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blackText"
                        android:text="Hand Picking"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="0dp"
                    android:padding="8dp"

                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity : "
                        android:textColor="@color/blackText"
                        android:textSize="14sp"
                         />

                    <TextView
                        android:id="@+id/txt_view_crop_harvest_card_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200 "
                        android:textColor="@color/blackText"
                        android:textSize="14sp"/>
                    <TextView
                        android:id="@+id/txt_view_crop_harvest_card_units"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" tonnes"
                        android:textColor="@color/blackText" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    />
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="0dp"
                    android:padding="8dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Status : "
                        android:textColor="@color/blackText"
                        />

                    <TextView
                        android:id="@+id/txt_view_crop_harvest_card_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Sold"
                        android:textColor="@color/blackText" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="0dp"
                    android:padding="8dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Cost : "
                        android:textColor="@color/blackText"
                         />

                    <TextView
                        android:id="@+id/txt_view_crop_harvest_card_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="UGX 150,000"
                        android:textColor="@color/blackText" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="0dp"
                    android:padding="8dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Income Generated : "
                        android:textColor="@color/blackText"
                        />

                    <TextView
                        android:id="@+id/txt_view_crop_harvest_card_income_generated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="UGX 150,000"
                        android:textColor="@color/blackText" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:padding="0dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/layout_crop_harvest_card_show_hide"
                    android:background="@color/gray"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/img_crop_harvest_card_show_crops"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:backgroundTint="@color/black"
                        android:textColor="@color/darker_gray"
                        android:gravity="end"
                        android:src="@drawable/arrow_drop_down" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_crop_harvest_expand"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:visibility="gone">


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>