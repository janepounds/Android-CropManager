<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/solidwhite_shape"
    android:layout_margin="10dp"
    android:orientation="vertical"
  >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="@dimen/dimen_5dp"
            android:paddingLeft="@dimen/dimen_5dp"
            android:paddingBottom="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:background="@drawable/rectangular_green_frame" >

                <TextView
                    android:id="@+id/text_view_purchase_preview_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Error ..."
                    android:visibility="gone"
                    android:textColor="@color/device_problem"
                    android:textSize="14sp"
                    android:gravity="center_horizontal" />

                <LinearLayout
                    android:layout_height="50dp"
                    android:layout_width="match_parent">

                    <TextView
                        android:id="@+id/txt_wallet_purchase_mechant_label"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="Merchant ID"
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"/>
                    <TextView
                        android:id="@+id/text_view_purchase_preview_mechant_id"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="123456789025"
                        android:alpha="1.0"
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="50dp"
                    android:layout_width="match_parent">

                    <TextView
                        android:id="@+id/transaction_receiver_label"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="Paying "
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"/>
                    <TextView
                        android:id="@+id/text_view_purchase_preview_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="Kalin Farms"
                        android:alpha="1.0"
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="50dp"
                    android:layout_width="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="Service"
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"/>
                    <TextView
                        android:id="@+id/text_view_purchase_service"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="Food Purchase"
                        android:alpha="1.0"
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="50dp"
                    android:layout_width="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="Transaction Amount"
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"/>
                    <TextView
                        android:id="@+id/txt_view_crop_bill_preview_total"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="UGX 0"
                        android:alpha="1.0"
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="50dp"
                    android:layout_width="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="Purchase Date"
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"/>
                    <TextView
                        android:id="@+id/text_view_purchase_date_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="2019/01/01  23:00pm"
                        android:alpha="1.0"
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/discount_layount"
                    android:layout_height="50dp"
                    android:layout_width="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="Discount Amount"
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"/>
                    <TextView
                        android:id="@+id/txt_view_discount_preview_total"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="UGX 0"
                        android:alpha="1.0"
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearlayount_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="20dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Comfirmation_Error_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Couldn't Connect online, Sorry try again later"
                    android:gravity="center"
                    android:textColor="@color/device_problem"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_purchase_preview_confirm"
                    style="@style/Button_DW"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:background="@drawable/solidbtn_shape"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:text="@string/comfirm_purchase"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />


            </LinearLayout>


        </LinearLayout>

</LinearLayout>