<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CropBillManagerActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="@string/supplier"
                            android:textColor="@color/textColor"
                            android:textSize="12sp"
                             />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_shapes_grey_spinner"
                            android:orientation="vertical"
                            android:padding="2.4dp">
                        <Spinner
                            android:id="@+id/spinner_crop_bill_supplier"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Select"
                            android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="4dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="@string/bill_number"
                            android:textColor="@color/textColor"
                            android:textSize="12sp"
                             />

                        <TextView
                            android:id="@+id/txt_crop_bill_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_shapes"
                            android:textColor="@color/blackText"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:layout_margin="4dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="@string/order_number"
                            android:textColor="@color/textColor"
                            android:textSize="12sp"
                             />

                        <EditText
                            android:id="@+id/txt_crop_bill_order_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_shapes"
                            android:textColor="@color/blackText"
                            android:hint="Enter.."
                            android:textSize="14sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:layout_margin="4dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="@string/bill_date"
                            android:textColor="@color/textColor"
                            android:textSize="12sp"
                             />

                        <EditText
                            android:id="@+id/txt_crop_bill_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_shapes_grey_spinner"
                            android:textColor="@color/blackText"
                            android:textSize="14sp"
                            android:hint="Select"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="@string/due_date"
                            android:textColor="@color/textColor"
                            android:textSize="12sp"
                             />

                        <EditText
                            android:id="@+id/txt_crop_bill_due_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:background="@drawable/input_shapes_grey_spinner"
                            android:hint="Select"
                            android:inputType="none"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:text="@string/terms"
                            android:textColor="@color/textColor"
                            android:textSize="12sp"

                             />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_shapes_grey_spinner"
                            android:orientation="vertical"
                            android:padding="2.4dp">
                        <Spinner
                            android:id="@+id/txt_crop_bill_terms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:entries="@array/invoice_terms_list"
                            android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TableRow
                                android:id="@+id/tableRow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/crop_invoice_table_border"

                                >

                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="28dp"
                                    android:background="@drawable/crop_invoice_table_border"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txt_view_crop_invoice_date"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/crop_invoice_table_border"
                                        android:gravity="center"
                                        android:text="@string/item_details_label"
                                        android:textSize="14sp"
                                        android:textColor="@color/textColor"
                                         />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="@dimen/crop_estimate_small_column_size"
                                    android:layout_height="28dp"
                                    android:background="@drawable/crop_invoice_table_border"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txt_view_crop_invoice_age"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/crop_invoice_table_border"
                                        android:gravity="center"
                                        android:text="@string/quantity"
                                        android:textColor="@color/textColor"
                                        android:textSize="12sp"
                                         />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="@dimen/crop_estimate_small_column_size"
                                    android:layout_height="28dp"
                                    android:background="@drawable/crop_invoice_table_border"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txt_view_crop_invoice_weight"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/crop_invoice_table_border"
                                        android:gravity="center"
                                        android:text="@string/rate"
                                        android:textColor="@color/textColor"
                                        android:textSize="12sp"
                                         />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="@dimen/crop_estimate_small_column_size"
                                    android:layout_height="28dp"
                                    android:background="@drawable/crop_invoice_table_border"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txt_view_crop_invoice_height"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/crop_invoice_table_border"
                                        android:gravity="center"
                                        android:textColor="@color/textColor"
                                        android:text="@string/label_tax"
                                        android:textSize="12sp"
                                         />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="150dp"
                                    android:layout_height="28dp"
                                    android:background="@drawable/crop_invoice_table_border"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/txt_view_crop_invoice_bcs"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/crop_invoice_table_border"
                                        android:gravity="center"
                                        android:textColor="@color/textColor"
                                        android:text="@string/amount_label"
                                        android:textSize="12sp"
                                         />
                                </LinearLayout>


                            </TableRow>

                            <LinearLayout
                                android:layout_width="60dp"
                                android:layout_height="28dp"
                                android:orientation="horizontal"></LinearLayout>
                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recyc_view_crop_invoice_item_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/gray">

                        </android.support.v7.widget.RecyclerView>
                    </LinearLayout>

                </HorizontalScrollView>

                <Button
                    android:id="@+id/btn_add_item"
                    style="@style/ButtonFinancial"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:minWidth="1dp"
                    android:backgroundTint="@color/textColor"
                    android:drawableTint="#ffffff"
                    android:textSize="14sp"
                    android:text="@string/label_add_item"
                    android:textAllCaps="false"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="@string/sub_total"
                        android:textColor="@color/textColor"
                        android:textSize="12sp"
                         />

                    <TextView

                        android:id="@+id/txt_view_crop_bill_sub_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_weight="0.3"
                        android:text="@string/default_numeric_value" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/discount"
                        android:layout_weight="0.4"
                        android:textColor="@color/textColor"
                        android:textSize="12sp"
                         />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@color/gray_mh"
                        android:layout_weight="0.3"
                        android:orientation="horizontal">


                        <EditText
                            android:id="@+id/txt_crop_bill_discount_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:background="@drawable/input_shapes"
                            android:ems="3"
                            android:hint="Enter.."

                            android:inputType="number"
                            android:textSize="14sp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:gravity="center_vertical"
                            android:text="%"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:textAlignment="center"
                            android:textSize="18sp"
                            

                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.3"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_crop_bill_discount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:text="@string/default_numeric_value"/>

                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/divider_line_color_estimates"
                    android:orientation="horizontal"
                    android:padding="8dp">


                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/total_ugx"
                        android:textColor="@color/textColor"
                        android:textSize="12sp"
                         />

                    <TextView
                        android:id="@+id/txt_crop_bill_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_weight="0.5"
                        android:textColor="@color/textColor"
                        android:text="@string/default_numeric_value" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginRight="30dp"
                        android:text="@string/notes"
                        android:textColor="@color/textColor"
                        android:textSize="12sp"
                         />

                    <EditText
                        android:id="@+id/txt_crop_bill_notes"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:background="@drawable/input_shapes"
                        android:gravity="start"
                        android:hint="Enter.."
                        android:textSize="12sp"/>
                </LinearLayout>
                           </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="5dp">
                <Button
                    android:id="@+id/btn_save"
                    style="@style/ButtonFinancial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/textColor"
                    android:drawableTint="#ffffff"
                    android:text="Save "
                    android:textAllCaps="false"
                    android:textColor="#ffffff" />
                <Button
                    android:id="@+id/btn_save_send"
                    style="@style/ButtonFinancial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/textColor"

                    android:text="@string/save_send"
                    android:textAllCaps="false"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>