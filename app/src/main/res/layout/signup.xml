<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5F6F8"
        android:orientation="vertical"
        tools:context="com.myfarmnow.myfarmcrop.activities.SignUp">

        <include
            android:id="@+id/myToolbar"
            layout="@layout/toolbar"
            android:layout_height="100dp"
            android:layout_width="match_parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:elevation="10dp">

            <RelativeLayout
                android:id="@+id/credential_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="@dimen/dimen_10dp">



                    <RelativeLayout
                        android:id="@+id/layout_user_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:visibility="gone">

                        <com.myfarmnow.myfarmcrop.customs.CircularImageView
                            android:id="@+id/user_photo"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/profile"
                            android:visibility="gone"
                            app:border_color="@color/white"
                            app:border_overlay="true"
                            app:border_width="2dp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/layout_form"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:background="@drawable/background_custom_dialog">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/josefin_sans"
                            android:text="@string/sign_up"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="39dp"
                            android:layout_height="5dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="12dp"
                            android:background="@drawable/rounded_corners_button" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/light_gray"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="6dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginEnd="6dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/rounded_corners_edittext_white"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="15dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="@dimen/dimen_10dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/josefin_sans"
                                        android:layout_marginBottom="4dp"
                                        android:text="@string/first_name" />

                                    <EditText
                                        android:id="@+id/user_firstname"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:background="@drawable/edittext_corner"
                                        android:fontFamily="@font/josefin_sans"
                                        android:gravity="start|center_vertical"
                                        android:inputType="text"
                                        android:padding="10dp"
                                        android:textAlignment="viewStart"
                                        android:textColor="@android:color/black"
                                        android:textColorHint="@android:color/black" />

                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dimen_10dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:fontFamily="@font/josefin_sans"
                                        android:text="@string/last_name" />

                                    <EditText
                                        android:id="@+id/user_lastname"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:background="@drawable/edittext_corner"
                                        android:fontFamily="@font/josefin_sans"
                                        android:inputType="text"
                                        android:paddingStart="10dp"
                                        android:textAlignment="viewStart"
                                        android:textColor="@android:color/black"
                                        android:textColorHint="@android:color/black" />

                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="15dp"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1"
                                    android:layout_marginEnd="@dimen/dimen_10dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/josefin_sans"
                                        android:layout_marginBottom="4dp"
                                        android:text="@string/phone_number"/>

                                    <EditText
                                        android:id="@+id/user_mobile"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:background="@drawable/edittext_corner"
                                        android:fontFamily="@font/josefin_sans"
                                        android:inputType="phone"
                                        android:paddingStart="@dimen/dimen_10dp"
                                        android:tag="+256 "
                                        android:textAlignment="viewStart"
                                        android:textColor="@android:color/black"
                                        android:textColorHint="@android:color/black"
                                        android:visibility="visible" />

                                </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="10dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/district"
                                    android:layout_marginBottom="4dp" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/edittext_corner"
                                    android:padding="6dp">
                                    <Spinner
                                        android:id="@+id/district_spinner"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"/>
                                </LinearLayout>
                            </LinearLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="15dp"
                                android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginEnd="@dimen/dimen_10dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/sub_county"
                                    android:layout_marginBottom="4dp"
                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/edittext_corner"
                                    android:padding="6dp">
                                    <Spinner
                                        android:id="@+id/sub_county_spinner"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center" />
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="10dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/village"
                                    android:layout_marginBottom="4dp"
                                    />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:background="@drawable/edittext_corner"
                                    android:padding="6dp">
                                    <Spinner
                                        android:id="@+id/village_spinner"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center" />
                                </LinearLayout>
                            </LinearLayout>
                            </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginBottom="15dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/josefin_sans"
                                        android:layout_marginBottom="4dp"
                                        android:text="@string/email_address"/>

                                    <EditText
                                        android:id="@+id/user_email"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:fontFamily="@font/josefin_sans"
                                        android:inputType="textEmailAddress|textNoSuggestions"
                                        android:paddingStart="10dp"
                                        android:background="@drawable/edittext_corner"
                                        android:textAlignment="viewStart"
                                        android:textColor="@android:color/black"
                                        android:textColorHint="@android:color/black" />

                                </LinearLayout>





                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginBottom="15dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/josefin_sans"
                                        android:text="@string/password"
                                        android:layout_margin="4dp"/>

                                    <EditText
                                        android:id="@+id/user_password"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:fontFamily="@font/josefin_sans"
                                        android:gravity="start|center_vertical"
                                        android:inputType="textPassword"
                                        android:paddingStart="10dp"
                                        android:background="@drawable/edittext_corner"
                                        android:textAlignment="viewStart"
                                        android:textColor="@android:color/black"
                                        android:textColorHint="@android:color/black" />

                                </LinearLayout>





                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="15dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/josefin_sans"
                                        android:layout_marginBottom="4dp"
                                        android:text="@string/confirm_password"/>

                                    <EditText
                                        android:id="@+id/user_confirm_password"
                                        android:layout_width="match_parent"
                                        android:layout_height="50dp"
                                        android:fontFamily="@font/josefin_sans"
                                        android:inputType="textPassword"
                                        android:paddingStart="10dp"
                                        android:background="@drawable/edittext_corner"
                                        android:textAlignment="viewStart"
                                        android:textColor="@android:color/black"
                                        android:textColorHint="@android:color/black" />

                                </LinearLayout>


                        </LinearLayout>
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dip"
                            android:background="@drawable/rounded_corners_button">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/signUpBtn"
                                android:layout_width="match_parent"
                                android:layout_height="40dip"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:background="@color/transparent"
                                android:fontFamily="@font/josefin_sans"
                                android:text="@string/register"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/button_text_size"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="30dip"
                                android:layout_height="30dip"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_gravity="right|center_vertical"
                                android:layout_margin="10dip"
                                android:src="@drawable/ic_right_arrow">

                            </ImageView>

                        </FrameLayout>
                    </LinearLayout>



                    <TextView
                        android:id="@+id/app_terms_services"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/josefin_sans"
                        android:gravity="center_horizontal"
                        android:layout_below="@id/layout_form"
                        android:text="@string/app_terms_services"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/margin_15"
                        android:layout_below="@id/app_terms_services">

                        <TextView
                            android:id="@+id/text_terms_of_service"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:ellipsize="end"
                            android:fontFamily="@font/josefin_sans"
                            android:maxLines="1"
                            android:text="Terms of Services"
                            android:textAlignment="textStart"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_and"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/text_terms_of_service"
                            android:ellipsize="end"
                            android:fontFamily="@font/josefin_sans"
                            android:maxLines="1"
                            android:paddingStart="@dimen/dimen_10dp"
                            android:paddingEnd="@dimen/dimen_10dp"
                            android:text="and"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_privacy_policy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/text_and"
                            android:ellipsize="end"
                            android:fontFamily="@font/josefin_sans"
                            android:maxLines="1"
                            android:text="Privacy Policy"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </RelativeLayout>

        </ScrollView>

    </RelativeLayout>

</layout>