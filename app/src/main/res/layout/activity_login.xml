<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:n1="http://schemas.android.com/apk/res/android"
    n1:layout_width="fill_parent"
    n1:layout_height="fill_parent"
    n1:background="@color/colorAccent"
    n1:tag="layout/sign_in_0">

    <LinearLayout
        n1:layout_width="fill_parent"
        n1:layout_height="wrap_content"
        n1:layout_centerInParent="true"
        n1:orientation="vertical">

        <TextView
            n1:layout_width="fill_parent"
            n1:layout_height="wrap_content"
            n1:gravity="center"
            n1:text="Sign in"
            n1:textColor="@color/whiteColor"
            n1:textSize="30.0sp" />
        <LinearLayout
            n1:layout_width="fill_parent"
            n1:layout_height="fill_parent"
            n1:layout_marginLeft="20.0dip"
            n1:layout_marginRight="20.0dip"
            n1:layout_marginTop="50.0dip"
            n1:orientation="vertical">

            <EditText
                n1:id="@+id/edtusername"
                n1:layout_width="fill_parent"
                n1:singleLine="true"
                n1:layout_height="45.0dip"
                n1:background="@drawable/rectangle_with_curve_border_drawable"
                n1:drawableLeft="@drawable/user"
                n1:drawablePadding="20.0dip"
                n1:hint="Email"
                n1:textCursorDrawable="@drawable/color_cursor"
                n1:padding="10.0dip"
                n1:textColor="@color/whiteColor"
                n1:textColorHint="@color/hintColor" />

            <EditText
                n1:id="@+id/edtpwd"

                n1:layout_width="fill_parent"
                n1:layout_height="45.0dip"
                n1:singleLine="true"
                n1:layout_marginTop="35.0dip"
                n1:background="@drawable/rectangle_with_curve_border_drawable"
                n1:drawableLeft="@drawable/password"
                n1:drawablePadding="20.0dip"
                n1:hint="Password"
                n1:textCursorDrawable="@drawable/color_cursor"
                n1:inputType="textPassword"
                n1:padding="10.0dip"
                n1:textColor="@color/whiteColor"
                n1:textColorHint="@color/hintColor" />

            <TextView
                n1:id="@+id/tvForgetPass"
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:layout_margin="20.0dip"
                n1:gravity="end"
                n1:text="Forgot Password?"
                n1:textColor="@color/hintColor"
                n1:textSize="16.0sp"
                n1:textStyle="italic"
                n1:typeface="sans" />

            <Button
                n1:id="@+id/btnSignIn"
                n1:layout_width="fill_parent"
                n1:layout_height="45.0dip"
                n1:layout_margin="10.0dip"
                n1:background="@drawable/sign_up_button"
                n1:text="Sign in"
                n1:textAllCaps="false"
                n1:textColor="@color/submitBtnColor"
                n1:textSize="18.0sp"
                n1:textStyle="bold"
                n1:typeface="sans" />

            <TextView
                n1:id="@+id/tvSignUp"
                n1:layout_width="fill_parent"
                n1:layout_height="wrap_content"
                n1:layout_margin="15.0dip"
                n1:gravity="center"
                n1:text="Dont't have an account? Sign Up!"
                n1:textColor="@color/hintColor"
                n1:textSize="16.0sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>