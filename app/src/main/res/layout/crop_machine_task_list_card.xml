<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <View
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_marginStart="16dp"
                android:background="@color/black"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitXY"
                android:src="@drawable/treatment_kit" />

            <View
                android:id="@+id/txt_view_crop_spraying_card_line"
                android:layout_width="1dp"
                android:layout_height="55dp"
                android:layout_marginStart="16dp"
                android:background="@color/black"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_view_crop_machine_task_card_start_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="20-08-2018"
                android:textColor="@color/blackText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/crop_card_border"
                android:orientation="vertical"
                android:padding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_crop_machine_task_card_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:text="Oil Refilling"
                        android:textColor="@color/blackText"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_weight="0.1"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/img_crop_machine_task_card_more"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/more_options_icon" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    >

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personnel : "
                        android:textColor="@color/blackText"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_view_crop_machine_task_card_personnel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="John Mukasa"
                        android:textColor="@color/blackText" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Recurring : "
                        android:textColor="@color/blackText"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_view_crop_machine_task_card_recurring"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="Monthly"
                        android:textColor="@color/blackText" />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/layout_crop_task_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Status : "
                        android:textColor="@color/blackText"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_view_crop_machine_task_card_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Complete"
                        android:textColor="@color/blackText" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:padding="0dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:id="@+id/layout_crop_scouting_card_show_hide"
                    android:background="@color/gray"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/img_crop_machine_task_card_show_description"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:backgroundTint="@color/black"
                        android:textColor="@color/darker_gray"
                        android:gravity="end"
                        android:src="@drawable/arrow_drop_down" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/layout_crop_machine_task_expand"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/gray"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="4dp"
                    android:visibility="gone">


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>