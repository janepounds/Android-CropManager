<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <View
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_marginStart="16dp"
                android:background="@color/black"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitXY"
                android:src="@drawable/treatment_kit" />

            <View
                android:id="@+id/txt_view_crop_spraying_card_line"
                android:layout_width="1dp"
                android:layout_height="55dp"
                android:layout_marginStart="16dp"
                android:background="@color/black"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_view_crop_transplanting_card_operation_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="20-08-2018"
                android:textColor="@color/blackText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:background="@drawable/crop_card_border"
                android:orientation="vertical"
                android:padding="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:text="Transplanting"
                        android:textColor="@color/blackText"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/txt_crop_transplanting_card_transplanted_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(2.5 ha)"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_weight="0.1"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/img_crop_irrigation_card_more"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/more_options_icon" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Total Seedlings : "
                        android:textColor="@color/blackText"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_view_crop_transplanting_card_total_seedlings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="100 "
                        android:textColor="@color/blackText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Seedlings / ha : "
                        android:textColor="@color/blackText"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_view_crop_transplanting_card_seedlings_per_ha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="200"
                        android:textColor="@color/blackText" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Variety Earliness : "
                        android:textColor="@color/blackText"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_view_crop_transplanting_card_variety_earliness"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medium "
                        android:textColor="@color/blackText" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harvest Due Date : "
                        android:textColor="@color/blackText"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_view_crop_transplanting_card_expected_harvesting_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2019-04-23"
                        android:textColor="@color/blackText" />
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Expected Yield : "
                        android:textColor="@color/blackText"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_view_crop_transplanting_card_expected_yield"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="15"
                        android:textColor="@color/blackText" />
                    <TextView
                        android:id="@+id/txt_view_crop_transplanting_card_units"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="tonnes"
                        android:textColor="@color/blackText" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Total Cost : "
                        android:textColor="@color/blackText"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_view_crop_transplanting_card_total_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="UGX 150,000"
                        android:textColor="@color/blackText" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>