<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="3dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        >

                        <Button
                            android:id="@+id/btn_machine_service"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Service"
                            android:textAllCaps="false"
                            android:layout_weight="1"/>
                        <Button
                            android:id="@+id/btn_machine_tasks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tasks"
                            android:textAllCaps="false"
                            android:layout_weight="1"/>
                        <Button
                            android:id="@+id/btn_machine_notes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notes"
                            android:textAllCaps="false"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/img_crop_machine_card_more"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:backgroundTint="@color/black"
                        android:textColor="@color/darker_gray"
                        app:srcCompat="@drawable/more_options_icon" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="3dp">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:textSize="14dp"
                            android:textColor="#696666"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_weight="0.1"
                            android:layout_marginRight="5dp"
                            android:text="Name : " />


                    <TextView
                        android:id="@+id/txt_crop_machine_card_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submissive Pump"
                        android:textColor="#696666"
                        android:textSize="14dp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category :"
                            android:textStyle="bold"
                            android:textColor="#696666"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/txt_crop_machine_card_category"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:text="Irrigation Pump"
                            android:textColor="#696666"
                            android:textSize="14dp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="3dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Model :"
                        android:textColor="#696666"
                        android:textStyle="bold"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/txt_crop_machine_card_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="M756"
                        android:textColor="#696666"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="100dp"
                        android:textSize="14dp" />





                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="3dp">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reg# :"
                        android:textColor="#696666"
                        android:textStyle="bold"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/txt_crop_machine_card_registration_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1762156"
                        android:textColor="#696666"
                        android:layout_marginLeft="10dp"
                        android:textSize="14dp" />




                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"

                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location :"
                            android:textStyle="bold"
                            android:textColor="#696666"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/txt_crop_machine_card_storage_location"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:text="Machine Store"
                            android:textColor="#696666"
                            android:textSize="14dp" />


                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>
        </LinearLayout>




</LinearLayout>