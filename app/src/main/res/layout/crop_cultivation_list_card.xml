<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:background="@color/light_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="vertical">
            <View
                android:layout_width="1dp"
                android:layout_height="19dp"
                android:textAlignment="center"
                android:layout_marginStart="16dp"
                android:background="@color/black" />
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitXY"
                android:src="@drawable/treatment_kit" />

            <View
                android:id="@+id/txt_view_crop_cultivation_card_line"
                android:layout_width="1dp"
                android:layout_height="55dp"
                android:textAlignment="center"
                android:layout_marginStart="16dp"
                android:background="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/txt_view_crop_cultivation_card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="20-08-2018"
                android:textColor="@color/blackText"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/black_border"
                android:layout_marginEnd="8dp"
             >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_margin="0dp"
                    android:padding="8dp">

                  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="0.9"
                      android:text="Cultivation"
                      android:textColor="@color/blackText"
                      android:textSize="18sp"
                      />
                  <LinearLayout
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_gravity="end"
                      android:layout_weight="0.1"
                      android:orientation="horizontal">


                      <ImageView
                          android:id="@+id/img_crop_cultivation_card_more"
                          android:layout_width="wrap_content"
                          android:layout_height="25dp"
                          android:backgroundTint="@color/black"
                          android:gravity="end"
                          android:textColor="@color/darker_gray"
                          app:srcCompat="@drawable/more_options_icon" />

                  </LinearLayout>
              </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="0dp"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/txt_view_crop_cultivation_card_operation"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Field Preparation"
                        android:textColor="@color/blackText"
                        android:textSize="14sp"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    />
                <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                    android:layout_margin="0dp"
                    android:padding="8dp">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Operator : "
                        android:textSize="14sp"
                      android:textColor="@color/blackText"
                       />

                  <TextView
                      android:id="@+id/txt_view_crop_cultivation_card_operator"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="50%"
                      android:textColor="@color/blackText" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="0dp"
                    android:padding="8dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cost : "
                        android:textSize="14sp"
                        android:textColor="@color/blackText"
                        />

                    <TextView
                        android:id="@+id/txt_view_crop_cultivation_card_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="50000"
                        android:textColor="@color/blackText" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    />
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_margin="0dp"
                  android:padding="8dp">
                  <TextView
                      android:id="@+id/txt_view_crop_cultivation_card_notes"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Dr. Williams, this is theg aghgs gajajhsh sgdhhsj yewuwh sgdhsj ghdkw sghsb shs"
                      android:textColor="@color/blackText" />
              </LinearLayout>

          </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>