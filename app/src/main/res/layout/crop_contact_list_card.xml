<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="3dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >




                    <TextView
                        android:id="@+id/txt_crop_contact_card_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Georgia Tusiime"
                        android:textColor="#696666"
                        android:textSize="14dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <ImageView
                        android:id="@+id/img_crop_contact_card_more"
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:layout_gravity="end"
                        android:backgroundTint="@color/black"
                        android:textColor="@color/darker_gray"
                        android:src="@drawable/more_options_icon" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_crop_contact_card_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:text="Breeder"
                        android:textColor="#696666"
                        android:textSize="14dp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="3dp">


                <TextView
                    android:id="@+id/txt_crop_contact_card_business_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cabral Tech Ltd"
                    android:textColor="#696666"


                    android:textSize="14dp" />





            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="3dp">



                <TextView
                    android:id="@+id/txt_crop_contact_card_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1762156"
                    android:textColor="#696666"

                    android:textSize="14dp" />




            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"

                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_crop_contact_card_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"

                        android:text="cabraltechltd@gmail.com"
                        android:textColor="#696666"
                        android:textSize="14dp" />


                </LinearLayout>


            </LinearLayout>



        </LinearLayout>
    </LinearLayout>
</LinearLayout>