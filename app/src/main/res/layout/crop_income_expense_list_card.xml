<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F9F9F9"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/input_shapes_crops_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="0dp">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginStart="6dp">

                    <TextView
                        android:id="@+id/txt_crop_income_expense_card_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:text="@string/default_income_expense_card_item"
                        android:textColor="#76A76A"
                        android:textStyle="bold"
                        android:textSize="20sp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginLeft="6dp"
                        >





                        <ImageView
                            android:id="@+id/img_crop_income_expense_card_more"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:backgroundTint="@color/black"
                            android:textColor="@color/darker_gray"
                            android:src="@drawable/ic_baseline_more_vert" />


                    </LinearLayout>




                </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D2D3D2"
            />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="Transaction "
                            android:textColor="#76A76A"
                            android:textSize="14dp" />
                        <TextView
                            android:textSize="14sp"
                            android:textColor="#111"
                            android:layout_width="0dp"
                            android:layout_weight=".1"
                            android:layout_height="wrap_content"
                            android:text=":"/>

                        <TextView
                            android:id="@+id/txt_crop_income_expense_card_transaction"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:text="Income"
                            android:textColor="#000"
                            android:textSize="14dp" />


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.4"
                            android:text="Category "
                            android:textColor="#76A76A"
                            android:textSize="14sp" />
                        <TextView
                            android:textSize="14sp"
                            android:textColor="#111"
                            android:layout_width="0dp"
                            android:layout_weight=".1"
                            android:layout_height="wrap_content"
                            android:text=":"/>

                        <TextView
                            android:id="@+id/txt_crop_income_expense_card_category"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:text="Machinery"
                            android:textColor="#000"
                            android:textSize="14dp" />



                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/department"
                            android:layout_weight="0.4"
                            android:textColor="#76A76A"
                            android:textSize="14sp" />
                        <TextView
                            android:textSize="14sp"
                            android:textColor="#111"
                            android:layout_width="0dp"
                            android:layout_weight=".1"
                            android:layout_height="wrap_content"
                            android:text=":"/>

                        <TextView
                            android:id="@+id/txt_crop_income_expense_card_department"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="5dp"
                            android:text="@string/default_income_expense_card_department"
                            android:textColor="#000"
                            android:textSize="14sp" />



                    </LinearLayout>


                </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Status "
                        android:layout_weight="0.4"
                        android:textColor="#76A76A"
                        android:textSize="14sp" />
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#111"
                        android:layout_width="0dp"
                        android:layout_weight=".1"
                        android:layout_height="wrap_content"
                        android:text=":"/>

                    <TextView
                        android:id="@+id/txt_crop_income_expense_card_status"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:text="Pending Payment"
                        android:textColor="#000"
                        android:textSize="14sp" />



                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Amount "
                        android:layout_weight="0.4"
                        android:textColor="#76A76A"
                        android:textSize="14sp" />
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#111"
                        android:layout_width="0dp"
                        android:layout_weight=".1"
                        android:layout_height="wrap_content"
                        android:text=":"/>

                    <TextView
                        android:id="@+id/txt_crop_income_expense_card_gross_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:text="200,000"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="14dp" />



                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D2D3D2"
                />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:layout_weight="0.4"
                        android:textColor="#76A76A"
                        android:textSize="14sp" />
                    <TextView
                        android:textSize="14sp"
                        android:textColor="#111"
                        android:layout_width="0dp"
                        android:layout_weight=".1"
                        android:layout_height="wrap_content"
                        android:text=":"/>

                    <TextView
                        android:id="@+id/txt_crop_income_expense_card_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="5dp"
                        android:text="12-03-2019"
                        android:textColor="#000"
                        android:textSize="14dp" />



                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>