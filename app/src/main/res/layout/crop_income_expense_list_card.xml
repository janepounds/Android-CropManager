<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="horizontal">



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="3dp">

                    <TextView
                        android:id="@+id/txt_crop_income_expense_card_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Irrigation Pump"
                        android:textColor="#696666"
                        android:textSize="16sp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:layout_marginLeft="6dp"
                        >



                        <ImageView
                            android:id="@+id/img_crop_income_expense_card_delete"
                            android:layout_width="25dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/ic_delete"
                            android:textSize="22dp" />


                        <ImageView
                            android:id="@+id/img_crop_income_expense_card_edit"
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/arrow_right_gray"
                            android:textColor="@color/darker_gray"
                            android:textSize="22dp" />

                        <ImageView
                            android:id="@+id/img_crop_income_expense_card_more"
                            android:layout_width="25dp"
                            android:layout_height="match_parent"
                            android:backgroundTint="@color/black"
                            android:textColor="@color/darker_gray"
                            app:srcCompat="@drawable/more_options_icon" />


                    </LinearLayout>




                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transaction :"
                            android:textStyle="bold"
                            android:textColor="#696666"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/txt_crop_income_expense_card_transaction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:text="Income"
                            android:textColor="#696666"
                            android:textSize="14dp" />


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category :"
                            android:textStyle="bold"
                            android:textColor="#696666"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/txt_crop_income_expense_card_category"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="5dp"
                            android:text="Machinery"
                            android:textColor="#696666"
                            android:textSize="14dp" />



                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status :"
                            android:textStyle="bold"
                            android:textColor="#696666"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/txt_crop_income_expense_card_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginLeft="5dp"
                            android:text="Pending Payment"
                            android:textColor="#696666"
                            android:textSize="14dp" />



                    </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/input_shapes">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount :"
                        android:textColor="#696666"
                        android:textStyle="bold"
                        android:textSize="14dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UGX "
                        android:textColor="#696666"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="2dp"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/txt_crop_income_expense_card_gross_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="200,000"
                        android:textColor="#696666"

                        android:textSize="14sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date :"
                        android:textColor="#696666"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"/>

                    <TextView
                        android:id="@+id/txt_crop_income_expense_card_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12-03-2019"
                        android:gravity="end"

                        android:textColor="#696666"
                        android:textSize="14dp" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>



    </LinearLayout>



</LinearLayout>