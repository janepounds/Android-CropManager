<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccentLight"
    tools:context=".activities.wallet.WalletPurchaseCardPreviewActivity" >

        <LinearLayout
            android:id="@+id/layout_bill_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/solidwhite_shape"
            android:layout_margin="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:background="@drawable/rectangular_green_frame">
                <TextView
                    android:id="@+id/text_view_purchase_preview_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Error ..."
                    android:visibility="gone"
                    android:textColor="@color/device_problem"
                    android:textSize="14sp"
                    android:gravity="center_horizontal" />

                <LinearLayout
                    android:layout_height="50dp"
                    android:layout_width="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="Status "
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"/>
                    <TextView
                        android:id="@+id/text_view_purchase_status"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="successful"
                        android:alpha="1.0"
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="50dp"
                    android:layout_width="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="Reference ID "
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"/>
                    <TextView
                        android:id="@+id/text_view_purchase_reference_number"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="123456789025"
                        android:alpha="1.0"
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="50dp"
                    android:layout_width="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="Receipt ID "
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"/>
                    <TextView
                        android:id="@+id/text_view_purchase_receipt_number"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="001230"
                        android:alpha="1.0"
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="50dp"
                    android:layout_width="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="Service"
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"/>
                    <TextView
                        android:id="@+id/text_view_purchase_service"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="Food Purchase"
                        android:alpha="1.0"
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="50dp"
                    android:layout_width="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="Paid To "
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"/>
                    <TextView
                        android:id="@+id/text_view_purchase_preview_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="Kalin Farms"
                        android:alpha="1.0"
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="50dp"
                    android:layout_width="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="Transaction Amount"
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"/>
                    <TextView
                        android:id="@+id/txt_view_bill_preview_total"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="UGX 0"
                        android:alpha="1.0"
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="50dp"
                    android:layout_width="match_parent">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="Purchase Date"
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"/>
                    <TextView
                        android:id="@+id/text_view_purchase_date_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dimen_10dp"
                        android:layout_weight="1"
                        android:text="2019/01/01  23:00pm"
                        android:alpha="1.0"
                        android:textAppearance="@style/textAppearance_general"
                        android:background="@drawable/rectangular_green_frame"
                        />
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:orientation="horizontal">

                    <Button
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:background="@drawable/rectangular_green_border"
                        android:textAllCaps="true"
                        android:theme="@style/textAppearance_general"
                        android:textSize="@dimen/dimen_16sp"
                        android:backgroundTint="@color/colorPrimary"
                        android:textColor="@color/white"
                        android:text="Print Receipt"></Button>


            </LinearLayout>


        </LinearLayout>

</LinearLayout>