<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="horizontal">

    <TableRow
        android:background="@drawable/crop_invoice_table_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        >
        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="28dp"
            android:background="@drawable/crop_invoice_table_border"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_view_crop_invoice_items_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/crop_invoice_table_border"
                android:gravity="center"
                android:spinnerMode="dialog"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="28dp"
            android:background="@drawable/crop_invoice_table_border"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_view_crop_invoice_products"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/crop_invoice_table_border"
                android:gravity="center"
                android:spinnerMode="dialog"
                android:textSize="16sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="28dp"
            android:background="@drawable/crop_invoice_table_border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_view_crop_invoice_qty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/crop_invoice_table_border"
                android:gravity="center"

                android:textSize="13sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="65dp"
            android:layout_height="28dp"
            android:background="@drawable/crop_invoice_table_border"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_view_crop_invoice_rate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/crop_invoice_table_border"
                android:gravity="center"
                android:textSize="13sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="28dp"
            android:background="@drawable/crop_invoice_table_border"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_view_crop_invoice_tax"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/crop_invoice_table_border"
                android:gravity="center"
               
                android:textSize="13sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/crop_estimate_small_column_size"
            android:layout_height="28dp"
            android:background="@drawable/crop_invoice_table_border"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text_view_view_crop_invoice_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/crop_invoice_table_border"
                android:gravity="center"
                android:textSize="13sp"/>
        </LinearLayout>

    </TableRow>
    
</LinearLayout>



