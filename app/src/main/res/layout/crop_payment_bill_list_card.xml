<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:paddingStart="24dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bill :"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_crop_payment_bill_card_bill_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BL#001 "
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp" />

                 <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    >
                    <TextView
                        android:id="@+id/txt_crop_payment_bill_card_payment_made"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="UGX 300,000"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/estimates_card_currency_color"
                        android:textSize="14sp" />
                    <ImageView
                        android:id="@+id/img_crop_payment_card_more"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/more_options_icon" />


                </LinearLayout>




            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="#D2D3D2" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_crop_payment_bill_card_payment_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08-03-2019"
                    android:textColor="@color/estimates_card_text_color"
                    android:textSize="14sp" />



                <TextView
                    android:id="@+id/txt_crop_payment_bill_card_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:text="CASH"
                    android:textColor="@color/estimates_card_text_color"
                    android:textSize="14sp"
                   />


            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">




            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:text="Bill Payment"
                android:textColor="@color/estimates_card_text_color"
                android:textSize="14sp"
               />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>