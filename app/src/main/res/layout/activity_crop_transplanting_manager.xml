<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CropTransplantingManagerActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginBottom="10dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/operation_date"
                    android:textColor="@color/textColor"
                    android:layout_marginBottom="4dp"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/txt_crop_transplanting_operation_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select"
                    android:background="@drawable/input_shapes_grey_spinner"
                    android:inputType="none"

                    android:textSize="14sp" />
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/total_seedling"
                        android:textColor="@color/textColor"
                        android:layout_marginBottom="4dp"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/txt_crop_transplanting_total_seedling"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Enter.."
                        android:background="@drawable/input_shapes"
                        android:textSize="14sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/txt_crop_transplanting_seedling_per_unit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/seedling_per_ha"
                        android:textColor="@color/textColor"
                        android:layout_marginBottom="4dp"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/txt_crop_transplanting_seedling_per_ha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_shapes"
                        android:hint="Enter.."
                        android:inputType="number"
                        android:textSize="14sp"

                        />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginBottom="10dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/variety_earliness"
                    android:textColor="@color/textColor"
                    android:layout_marginBottom="4dp"
                    android:textSize="15sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_shapes_grey_spinner">

                <Spinner
                    android:id="@+id/sp_crop_transplanting_variety_earliness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:entries="@array/sp_crop_transplanting_variety_earliness"
                    />
                </LinearLayout>
            </LinearLayout>










            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/cycle_length"
                        android:textColor="@color/textColor"
                        android:layout_marginBottom="4dp"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/txt_crop_transplanting_cycle_length"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_shapes"
                        android:hint="Enter.."
                        android:textSize="14sp"
                        />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginBottom="10dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/expected_harvesting_date"
                    android:textColor="@color/textColor"
                    android:layout_marginBottom="4dp"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/txt_crop_transplanting_expected_harvesting_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_shapes_grey_spinner"

                    android:inputType="none"
                    android:textSize="14sp"
                    />
            </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/units"
                        android:textColor="@color/textColor"
                        android:layout_marginBottom="4dp"
                        android:textSize="15sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_shapes_grey_spinner">

                    <Spinner
                        android:id="@+id/sp_crop_transplanting_units"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/crop_roi_yield_units"
                        android:textSize="14sp"
                        />
                    </LinearLayout>
                </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="20dp"
                android:layout_weight="1">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/expected_yield"
                    android:textColor="@color/textColor"
                    android:layout_marginBottom="4dp"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/txt_crop_transplanting_expected_yield"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_shapes"
                    android:hint="Enter.."
                    android:textSize="14sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/txt_crop_transplanting_expected_yield_per_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/expected_yield_per_ha"
                    android:textColor="@color/textColor"
                    android:layout_marginBottom="4dp"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/txt_crop_transplanting_expected_yield_per_ha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_shapes"
                    android:hint="Enter.."
                    android:textSize="14sp"
                    android:inputType="number"
                    />
            </LinearLayout>
</LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginEnd="20dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="@string/operator"
                    android:textColor="@color/textColor"
                    android:layout_marginBottom="4dp"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/txt_crop_transplanting_operator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter.."
                    android:textSize="14sp"
                    android:inputType="text"
                    android:background="@drawable/input_shapes"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginBottom="10dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:text="@string/total_cost"
                    android:textColor="@color/textColor"
                    android:layout_marginBottom="4dp"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/txt_crop_transplanting_currency"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/ugx"
                        android:layout_weight="0.7"
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center"
                        android:background="@drawable/input_shapes_grey_units"
                        />

                    <EditText
                        android:id="@+id/txt_crop_transplanting_total_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Enter.."
                        android:layout_weight="0.3"
                        android:inputType="number"
                        android:textSize="14sp"
                        android:background="@drawable/input_shapes"

                        />
                </LinearLayout>

            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/recurrence"
                        android:textColor="@color/textColor"
                        android:layout_marginBottom="4dp"
                        android:textSize="15sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_shapes_grey_spinner">
                    <Spinner
                        android:id="@+id/sp_crop_transplanting_recurrence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:entries="@array/sp_crop_task_recurrence"
                        />
                </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/reminders"
                        android:textColor="@color/textColor"
                        android:layout_marginBottom="4dp"
                        android:textSize="15sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_shapes_grey_spinner">
                    <Spinner
                        android:id="@+id/sp_crop_transplanting_reminders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/sp_crop_task_reminders"
                        />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_crop_transplanting_weekly_reminder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"

                    >

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Every"
                        android:gravity="center_vertical"
                        android:textColor="@color/textColor"
                        android:textSize="15sp"
                        android:layout_weight="0.3"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_weight="0.7"
                        >
                        <EditText
                            android:id="@+id/txt_crop_transplanting_weekly_weeks"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:text="@string/default_numeric_value"
                            android:inputType="numberDecimal"
                            android:background="@drawable/input_shapes"
                            android:textSize="14sp"
                            android:layout_weight="0.8"/>
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Weeks"
                            android:background="@drawable/input_shapes_grey_units_right"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_weight="0.2"/>
                    </LinearLayout>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/repeat_until"
                        android:textColor="@color/textColor"
                        android:textSize="15sp"
                        android:layout_weight="0.3"/>

                    <EditText
                        android:id="@+id/txt_crop_transplanting_repeat_until"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:hint="Select"
                        android:background="@drawable/input_shapes_grey_spinner"
                        android:inputType="none"
                        android:textSize="14sp"
                        android:layout_weight="0.7"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_crop_transplanting_days_before"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:visibility="gone"

                >
                <EditText
                    android:id="@+id/txt_crop_transplanting_days_before"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="Enter.."
                    android:background="@drawable/input_shapes"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:layout_weight="0.7"/>




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Days Before"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:background="@drawable/input_shapes_grey_units_right"
                    android:layout_weight="0.3"/>


            </LinearLayout>
            <Button
                android:id="@+id/btn_save"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:backgroundTint="@color/colorPrimary"
                android:drawableTint="#ffffff"
                android:text="Save "
                android:textAllCaps="false"
                android:textColor="#ffffff" />







        </LinearLayout>
    </ScrollView>

</LinearLayout>