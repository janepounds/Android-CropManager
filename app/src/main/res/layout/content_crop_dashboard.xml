<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.CropDashboardActivity"
    tools:showIn="@layout/activity_crop_dashboard">
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/mainlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.AppBarLayout
                android:id="@+id/mainView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimary"
                android:theme="@style/AppTheme.AppBarOverlay">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:popupTheme="@style/AppTheme.PopupOverlay">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/imgdrawer"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:padding="5dp"
                            android:src="@drawable/menu" />

                        <TextView
                            android:id="@+id/tvtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="@string/title_activity_dashboard"
                            android:textColor="#fff"
                            android:textSize="18dp" />



                        <ImageView
                            android:id="@+id/imgscan"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="50dp"
                            android:src="@drawable/scan" />

                        <ImageView
                            android:id="@+id/imgsetting"
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/setting" />


                    </RelativeLayout>
                </android.support.v7.widget.Toolbar>

            </android.support.design.widget.AppBarLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/mainView">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/buttons"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/broke2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="@color/whiteColor"

                                android:orientation="vertical"
                                android:paddingBottom="5dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"

                                    android:padding="10dp"
                                    android:src="@drawable/breeders" />

                                <TextView
                                    android:id="@+id/tv_dashboard_fields"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:background="@color/whiteColor"
                                    android:gravity="center"
                                    android:paddingBottom="5dp"
                                    android:text="@string/label_fields"
                                    android:textAllCaps="true"
                                    android:textColor="#000000" />

                                <TextView
                                    android:id="@+id/brddedercount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:layout_marginTop="5dp"
                                    android:gravity="top"
                                    android:text="0"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    android:visibility="gone" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/tv_matings1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="@color/whiteColor"

                                android:orientation="vertical"
                                android:paddingBottom="5dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"

                                    android:padding="10dp"
                                    android:src="@drawable/matings" />

                                <TextView
                                    android:id="@+id/tv_matings"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:background="@color/whiteColor"
                                    android:gravity="center"

                                    android:paddingBottom="5dp"
                                    android:text="@string/label_crops"
                                    android:textAllCaps="true"
                                    android:textColor="#000000" />

                                <TextView
                                    android:id="@+id/matingcount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:layout_marginTop="5dp"
                                    android:gravity="top"
                                    android:text="0"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    android:visibility="gone" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_crop_dashboard_inventory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="@color/whiteColor"

                                android:orientation="vertical"
                                android:paddingBottom="5dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"

                                    android:padding="10dp"
                                    android:src="@drawable/litters" />

                                <TextView
                                    android:id="@+id/tv_litar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:background="@color/whiteColor"
                                    android:gravity="center"

                                    android:paddingBottom="5dp"
                                    android:text="@string/label_inventory"
                                    android:textAllCaps="true"
                                    android:textColor="#000000" />

                                <TextView
                                    android:id="@+id/littercount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:layout_marginTop="5dp"
                                    android:gravity="top"
                                    android:text="0"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    android:visibility="gone" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/broke3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/weaner_check"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="@color/whiteColor"

                                android:orientation="vertical"
                                android:paddingBottom="5dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"

                                    android:padding="10dp"
                                    android:src="@drawable/weaner" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:background="@color/whiteColor"
                                    android:gravity="center"

                                    android:paddingBottom="5dp"
                                    android:text="@string/label_machinery"
                                    android:textAllCaps="true"
                                    android:textColor="#000000" />

                                <TextView
                                    android:id="@+id/incomeexpensecount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:layout_marginTop="5dp"
                                    android:gravity="top"
                                    android:text="0"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    android:visibility="gone" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/medicationcount1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="@color/whiteColor"

                                android:orientation="vertical"
                                android:paddingBottom="5dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"

                                    android:padding="10dp"
                                    android:src="@drawable/mediction" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:background="@color/whiteColor"
                                    android:gravity="center"
                                    android:paddingBottom="5dp"
                                    android:text="@string/label_contacts"
                                    android:textAllCaps="true"
                                    android:textColor="#000000" />

                                <TextView
                                    android:id="@+id/medicationcount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:layout_marginTop="5dp"
                                    android:gravity="top"
                                    android:text="0"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    android:visibility="gone" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/income_check"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_weight="1"

                                android:background="@color/whiteColor"
                                android:orientation="vertical"
                                android:paddingBottom="5dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:padding="10dp"

                                    android:src="@drawable/incomeexpance" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:background="@color/whiteColor"
                                    android:gravity="center"
                                    android:paddingBottom="5dp"
                                    android:text="@string/label_tasks"
                                    android:textAllCaps="true"
                                    android:textColor="#000000" />

                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/broke4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/lv_milk_record"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_weight="1"

                                android:background="@color/whiteColor"
                                android:orientation="vertical"
                                android:paddingBottom="5dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:padding="10dp"

                                    android:src="@drawable/milkrecord" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:background="@color/whiteColor"
                                    android:gravity="center"
                                    android:paddingBottom="5dp"
                                    android:text="@string/label_income_expenses"
                                    android:textAllCaps="true"
                                    android:textColor="#000000" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:orientation="vertical"

                                android:paddingBottom="5dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:background="@color/whiteColor"
                                    android:padding="10dp"

                                    android:src="@drawable/meatproductions" />

                                <TextView
                                    android:id="@+id/meat_Produced_txt"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:background="@color/whiteColor"
                                    android:gravity="center"
                                    android:paddingBottom="5dp"
                                    android:textSize="13sp"
                                    android:text="@string/label_weather_forecast"
                                    android:textAllCaps="true"
                                    android:textColor="#000000" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lv_task"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:orientation="vertical"

                                android:paddingBottom="5dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="70dp"
                                    android:background="@color/whiteColor"
                                    android:padding="10dp"
                                    android:src="@drawable/tasks" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:background="@color/whiteColor"
                                    android:gravity="center"
                                    android:paddingBottom="5dp"
                                    android:text="@string/label_basic_practices"
                                    android:textAllCaps="true"
                                    android:textColor="#000000" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:text="@string/label_financial_summary"
                            android:textColor="#000"
                            android:textSize="15dp"
                            android:textStyle="bold" />



                    </LinearLayout>


                </RelativeLayout>
            </ScrollView>

            <FrameLayout
                android:id="@+id/mainFrame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />



        </RelativeLayout>

        <android.support.design.widget.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#1E282C"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include layout="@layout/nav_header_navigation_drawer" />

                <ExpandableListView
                    android:id="@+id/drawer_menu_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#1E282C"
                    android:divider="@null"
                    android:groupIndicator="@null"
                    android:scrollbars="none" />
            </LinearLayout>
        </android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>
</android.support.constraint.ConstraintLayout>