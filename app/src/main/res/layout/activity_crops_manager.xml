<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    tools:context=".activities.CropsManagerActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginRight="12dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/crop"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                android:layout_marginBottom="4dp"
               />

                <AutoCompleteTextView
                    android:id="@+id/sp_crop_crop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/crops_list"
                    android:background="@drawable/input_shapes"
                    android:textSize="14sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="12dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/variety"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/txt_crops_variety"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter.."
                android:background="@drawable/input_shapes"
                android:textSize="14sp"



                />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="12dp">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cropping Year"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/txt_crops_cropping_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter.."
                android:background="@drawable/input_shapes"
                android:inputType="number"
                android:textSize="14sp"
                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/field"
                    android:layout_marginBottom="4dp"
                    android:textColor="@color/textColor"
                    android:textSize="15sp"
                   />
                <LinearLayout
                    android:background="@drawable/input_shapes_grey_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3.4dp">
                <Spinner
                    android:id="@+id/sp_crops_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginRight="12dp"
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="@string/growing_cycle"
                android:textSize="15sp"
                android:textColor="@color/textColor"
                android:layout_marginBottom="4dp"
                />
            <LinearLayout
                android:background="@drawable/input_shapes_grey_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3.4dp">
            <Spinner
                android:id="@+id/sp_crops_growing_cycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:entries="@array/crops_growing_cycle"
                />
            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                >

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="@string/season"
                    android:textSize="15sp"
                    android:textColor="@color/textColor"
                    android:layout_marginBottom="4dp"
                    />
                <LinearLayout
                    android:background="@drawable/input_shapes_grey_spinner"
                    android:padding="3.4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/sp_crops_season"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/sp_crops_season"
                    />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
               android:layout_weight="1"
                android:layout_marginRight="12dp"
                >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_sown"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/txt_crops_date_sown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Select"
                android:textSize="14sp"
                android:inputType="none"
                android:background="@drawable/input_shapes_grey_spinner"
                />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="12dp">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area"
                android:textColor="@color/textColor"
                android:textSize="15sp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="4dp"
                />

                <EditText
                    android:id="@+id/txt_crops_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_shapes"
                    android:ems="10"
                    android:hint="Enter.."
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:text="0"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginRight="12dp"
                >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/operator"
                android:textColor="@color/textColor"
                android:layout_marginRight="5dp"
                android:textSize="15sp"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/txt_crops_operator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter.."
                android:textSize="14sp"
                android:background="@drawable/input_shapes"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/operator_cost"
                android:textColor="@color/textColor"
                android:layout_marginBottom="4dp"
                android:textSize="15sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#F5F5F5"
                    >


                    <TextView
                       android:id="@+id/crops_currency_a"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="4dp"
                        android:text="@string/ugx"
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimary"
                        android:background="@drawable/input_shapes_grey_units"
                        android:gravity="center_vertical"

                        />
                    <EditText
                        android:id="@+id/txt_crops_operator_cost"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/input_shapes"
                        android:ems="10"
                        android:hint="Enter.."
                        android:inputType="number"
                        android:textSize="14sp"
                        android:text="0"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="12dp"
                android:orientation="vertical">


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="@string/seed_name"
                    android:textColor="@color/textColor"
                    android:textSize="15sp"
                    android:layout_marginBottom="4dp"
                   />
                <LinearLayout
                    android:background="@drawable/input_shapes_grey_spinner"
                    android:padding="3.4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/sp_crops_seed_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_seeds"
                android:textColor="@color/textColor"
                android:layout_marginRight="5dp"
                android:textSize="15sp"
                android:layout_marginBottom="4dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <EditText
                        android:id="@+id/txt_crops_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/input_shapes"
                        android:ems="10"
                        android:hint="Enter.."
                        android:inputType="numberDecimal"
                        android:textSize="14sp"
                        android:text="0"
                        />


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="@string/planting_method"
                android:textColor="@color/textColor"
                android:layout_marginBottom="4dp"
                android:textSize="15sp" />
            <LinearLayout
                android:background="@drawable/input_shapes_grey_spinner"
                android:padding="3.4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Spinner
                android:id="@+id/sp_crops_planting_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/crops_planting_method"
                />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginRight="12dp">

                <TextView
                    android:layout_marginBottom="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harvest Units"
                    android:textColor="@color/textColor"
                    android:textSize="16sp" />
                <LinearLayout
                    android:background="@drawable/input_shapes_grey_spinner"
                    android:padding="3.4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/sp_crops_harvest_units"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/crop_roi_yield_units"
                     />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_marginBottom="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estimated Yield"
                    android:textColor="@color/textColor"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/txt_crops_estimated_yield"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Enter.."
                    android:background="@drawable/input_shapes"
                    android:textSize="14sp"
                    android:text="0"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estimated Revenue"
                android:textColor="@color/textColor"

                android:textSize="16sp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#F5F5F5"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/crops_currency_b"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="4dp"
                    android:text="@string/ugx"
                    android:textSize="14sp"
                    android:background="@drawable/input_shapes_grey_units"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"
                    android:layout_weight="0.1"

                    />
                <EditText
                    android:id="@+id/txt_crops_estimated_revenue"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/input_shapes"
                    android:layout_margin="0dp"
                    android:ems="10"
                    android:hint="Enter.."
                    android:inputType="number"
                    android:textSize="14sp"
                    android:layout_weight="0.7"
                    android:text="0"/>
                <TextView
                    android:id="@+id/txt_crops_estimated_revenue_units"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="14sp"
                    android:text="/Units"
                    android:gravity="center"
                    android:layout_weight="0.2"
                    android:background="@drawable/input_shapes_grey_units_right"
                    android:textColor="@color/colorPrimary"

                    />

            </LinearLayout>
        </LinearLayout>






        <Button
            android:id="@+id/btn_save"
            style="@style/Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:drawableTint="#ffffff"
            android:text="Save "
            android:textAllCaps="false"
            android:textColor="#ffffff" />







    </LinearLayout>
    </ScrollView>
</LinearLayout>