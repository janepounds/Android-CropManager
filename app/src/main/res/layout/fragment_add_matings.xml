<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.myfarmnow.myfarmcrop.DailogFragments.farmrecords.livestockrecords.AddMatingsFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_20dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_20dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/add_mating_close"
                            android:layout_width="26.18dp"
                            android:layout_height="26.18dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/close" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/josefin_sans_semibold"
                            android:gravity="center"
                            android:text="Add Mating"
                            android:textAllCaps="true"
                            android:textColor="@color/blackText"
                            android:textSize="25sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dimen_10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_5dp"
                                android:layout_marginBottom="@dimen/dimen_5dp"
                                android:fontFamily="@font/josefin_sans"
                                android:text="Mating Date" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:background="@drawable/edittext_corner"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/add_mating_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:paddingStart="@dimen/dimen_10dp"
                                    android:background="@android:color/transparent"
                                    android:inputType="none"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:id="@+id/image_date_picker"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_calendar" />

                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_5dp"
                                android:layout_marginBottom="@dimen/dimen_5dp"
                                android:fontFamily="@font/josefin_sans"
                                android:text="Female Name" />

                            <EditText
                                android:id="@+id/add_mating_female_name"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:paddingStart="@dimen/dimen_10dp"
                                android:background="@drawable/edittext_corner"
                                android:ems="10"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dimen_10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_5dp"
                                android:layout_marginBottom="@dimen/dimen_5dp"
                                android:fontFamily="@font/josefin_sans"
                                android:text="Male Name" />

                            <EditText
                                android:id="@+id/add_mating_male_name"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/edittext_corner"
                                android:entries="@array/crops_list"
                                android:paddingStart="@dimen/dimen_10dp"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_5dp"
                                android:layout_marginBottom="@dimen/dimen_5dp"
                                android:fontFamily="@font/josefin_sans"
                                android:text="Method" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_corner"
                                android:gravity="center"
                                android:orientation="vertical">

                                <Spinner
                                    android:id="@+id/add_mating_method"
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:background="@android:color/transparent"
                                    android:entries="@array/sp_mating_method"
                                    android:gravity="center"
                                    android:spinnerMode="dropdown" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="8dp"
                                    android:layout_marginRight="10dp"
                                    android:src="@drawable/ic_baseline_arrow_drop_down_24" />
                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_marginEnd="@dimen/dimen_10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_5dp"
                                android:layout_marginBottom="@dimen/dimen_5dp"
                                android:fontFamily="@font/josefin_sans"
                                android:text="Gestation Period" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_corner"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/add_mating_gestation_period"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="0dp"
                                    android:layout_weight="0.8"
                                    android:background="@android:color/transparent"
                                    android:inputType="number"
                                    android:paddingStart="@dimen/dimen_10dp"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.1"
                                    android:background="@drawable/edittext_right_corners_green"
                                    android:fontFamily="@font/josefin_sans"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/margin_10"
                                    android:paddingEnd="@dimen/margin_10"
                                    android:text="Days"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimen_5dp"
                                android:layout_marginBottom="@dimen/dimen_5dp"
                                android:fontFamily="@font/josefin_sans"
                                android:text="Delivery Alert" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:background="@drawable/edittext_corner"
                                android:orientation="horizontal">

                                <EditText
                                    android:id="@+id/add_mating_delivery_alert"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:layout_margin="0dp"
                                    android:layout_weight="0.8"
                                    android:background="@android:color/transparent"
                                    android:inputType="number"
                                    android:paddingStart="@dimen/dimen_10dp"
                                    android:textSize="14sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.1"
                                    android:background="@drawable/edittext_right_corners_green"
                                    android:fontFamily="@font/josefin_sans"
                                    android:gravity="center"
                                    android:paddingStart="@dimen/margin_10"
                                    android:text="Days before"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_30dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_5dp"
                            android:layout_marginBottom="@dimen/dimen_5dp"
                            android:fontFamily="@font/josefin_sans"
                            android:text="Note" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="115dp"
                            android:background="@drawable/edittext_corner">

                            <EditText
                                android:id="@+id/add_mating_note"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/edittext_corner"
                                android:paddingStart="@dimen/dimen_10dp"
                                android:paddingEnd="@dimen/dimen_10dp"
                                android:textSize="14sp"
                                android:textAlignment="textStart"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dimen_30dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:background="@drawable/rounded_corners_button">

                            <Button
                                android:id="@+id/add_mating_submit"
                                style="@style/Button"
                                android:layout_width="match_parent"
                                android:layout_height="55dp"
                                android:background="@android:color/transparent"
                                android:text="@string/submit"
                                android:textAllCaps="true"
                                android:textColor="#ffffff"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>