<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:background="@color/gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="vertical">
            <View
                android:layout_width="1dp"
                android:layout_height="19dp"
                android:textAlignment="center"
                android:layout_marginStart="16dp"
                android:background="@color/black" />
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:scaleType="fitXY"
                android:src="@drawable/treatment_kit" />

            <View
                android:id="@+id/txt_view_crop_fertilizer_application_card_line"
                android:layout_width="1dp"
                android:layout_height="55dp"
                android:textAlignment="center"
                android:layout_marginStart="16dp"
                android:background="@color/black" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/txt_view_crop_fertilizer_application_card_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="20-08-2018"
                android:textColor="@color/blackText" />

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@drawable/crop_card_border"
                android:layout_marginEnd="8dp"
              android:padding="4dp"
             >

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

                  <TextView
                      android:id="@+id/txt_view_crop_fertilizer_application_card_operation"
                      android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_weight="0.1"
                      android:text="Field Preparation"
                      android:textColor="@color/blackText"
                      android:textStyle="bold" />

                  <LinearLayout
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="right"
                      android:orientation="horizontal">


                      <ImageView
                          android:id="@+id/img_crop_fertilizer_application_card_more"
                          android:layout_width="24dp"
                          android:layout_height="24dp"
                          android:src="@drawable/more_options_icon" />
                  </LinearLayout>
              </LinearLayout>
              <View
                  android:layout_width="match_parent"
                  android:layout_height="2dp"
                  android:background="@color/gray">

              </View>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="Method : "
                      android:textStyle="bold"
                      android:textColor="@color/blackText"
                       />

                  <TextView
                      android:id="@+id/txt_view_crop_fertilizer_application_card_method"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:text="50%"
                      android:textColor="@color/blackText" />
              </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Rate : "
                        android:textStyle="bold"
                        android:textColor="@color/blackText"
                        />

                    <TextView
                        android:id="@+id/txt_view_crop_fertilizer_application_card_rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="50%"
                        android:textColor="@color/blackText" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cost : "
                        android:textStyle="bold"
                        android:textColor="@color/blackText"
                        />

                    <TextView
                        android:id="@+id/txt_view_crop_fertilizer_application_card_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="UGX 467000"
                        android:textAlignment="textEnd"
                        android:textColor="@color/blackText" />
                </LinearLayout>

          </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>