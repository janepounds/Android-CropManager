<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextAppearance">@style/MyMenuTextAppearance</item>
        <item name="android:typeface">serif</item>
        <!--<item name="android:typeface">@font/source_sans_pro_regular</item>-->

        <!--<item name="android:popupMenuStyle">@style/AppTheme.Popup</item>-->
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">#34463F</item>
    </style>


    <!--<style name="AppTheme.Popup" parent="Widget.AppCompat.PopupMenu.Overflow">-->
    <!--<item name="android:listPreferredItemHeightSmall">1dp</item>-->
    <!--</style>-->

    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:button">@layout/activity_crop_field_manager</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextAppearance">@style/MyMenuTextAppearance</item>
    </style>


    <style name="Button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="backgroundTint">@color/buttonColor</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>
    <style name="CropButton" parent="Base.TextAppearance.AppCompat.Button">

        <item name="android:background">@drawable/input_shapes</item>
        <item name="android:textColor">#2E7C33</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>


    </style>

    <style name="ButtonFinancial" parent="Base.TextAppearance.AppCompat.Button">
        <item name="backgroundTint">@color/estimates_manager_button</item>
    </style>

    <style name="generalnotitle" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="progressDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="ActionButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:minWidth">0dip</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
    </style>

    <style name="MyPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:itemBackground">@drawable/m_color</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
        <item name="android:listPreferredItemHeightSmall">30dp</item>
    </style>


    <style name="MyToolbar" parent="AppTheme">
        <item name="android:background">@color/colorAccentGreen</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="MyToolbarWallet" parent="AppTheme">
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/colorAccentGreen</item>
        <item name="android:textColorSecondary">@color/colorAccentGreen</item>
    </style>

    <style name="MyToolbarPopUp" parent="AppTheme">
        <item name="android:background">@color/colorAccentGreen</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>


    <style name="MyNavigationDrawer" parent="AppTheme">
        <item name="colorPrimary">@color/colorAccentGreen</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:scrollbarThumbVertical">@android:color/transparent</item>
    </style>


    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="HeaderTheme" parent="AppTheme">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- Custom Preference Theme inherits from the v14 support library Material Theme -->
    <style name="AppPreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceStyle">@style/AppPreference</item>
    </style>

    <!-- Style for an Preference Entry -->
    <style name="AppPreference" parent="@style/Preference.Material">
        <item name="android:layout">@layout/preference_material</item>
    </style>

    <!--Youtube List Style-->
    <style name="listStyleNoPadding">
        <item name="android:clipToPadding">false</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <style name="DialogFullscreen" parent="@android:style/Theme.Material.Light.DialogWhenLarge" >
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slideup_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="textAppearance_general">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HeaderThemeActivity">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="AppTheme.flock1" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary_birds</item>
    </style>

    <style name="AppTheme.birds" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_birds</item>
    </style>

    <style name="Button_2" parent="Base.TextAppearance.AppCompat.Button">
        <item name="backgroundTint">@color/colorPrimary_birds</item>
    </style>
    <style name="Button_DW" parent="Base.TextAppearance.AppCompat.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyMenuTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="spinnerStyle" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:padding">1sp</item>
        <item name="android:layout_margin">1sp</item>
        <item name="android:textColor">#34463F</item>
    </style>
</resources>
