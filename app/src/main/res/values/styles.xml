<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextAppearance">@style/MyMenuTextAppearance</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
    </style>


    <!--<style name="AppTheme.Popup" parent="Widget.AppCompat.PopupMenu.Overflow">-->
    <!--<item name="android:listPreferredItemHeightSmall">1dp</item>-->
    <!--</style>-->

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextAppearance">@style/MyMenuTextAppearance</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
    </style>


    <style name="Button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="backgroundTint">@color/buttonColor</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
    </style>

    <style name="CropButton" parent="Base.TextAppearance.AppCompat.Button">

        <item name="android:background">@drawable/input_shapes</item>
        <item name="android:textColor">#2E7C33</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">0</item>


    </style>

    <style name="ButtonFinancial" parent="Base.TextAppearance.AppCompat.Button">
        <item name="backgroundTint">@color/estimates_manager_button</item>
    </style>


    <style name="MyPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:itemBackground">@drawable/m_color</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
        <item name="android:listPreferredItemHeightSmall">30dp</item>
    </style>


    <style name="MyToolbarWallet" parent="AppTheme">
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/colorAccentGreen</item>
        <item name="android:textColorSecondary">@color/colorAccentGreen</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
    </style>

    <style name="MyToolbarPopUp" parent="AppTheme">
        <item name="android:background">@color/colorAccentGreen</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>


    <style name="HeaderTheme" parent="AppTheme">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="HeaderThemeWhite" parent="AppTheme">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <!-- Custom Preference Theme inherits from the v14 support library Material Theme -->

    <!-- Style for an Preference Entry -->

    <!--Youtube List Style-->

    <style name="textAppearance_view_pager" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
    </style>

    <style name="textAppearance_general">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="HeaderThemeActivity">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/josefin_sans</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/josefin_sans</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/josefin_sans</item>
    </style>


    <style name="MyMenuTextAppearance" parent="android:TextAppearance.Holo.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>>
        <item name="android:fontFamily">@font/josefin_sans</item>
    </style>


    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/background_custom_dialog</item>
    </style>

</resources>
