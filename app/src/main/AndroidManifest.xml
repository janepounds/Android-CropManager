<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.myfarmnow.myfarmcrop">

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.CropsListActivity"></activity>
        <activity android:name=".activities.CropSoilAnalysisListActivity" />
        <activity android:name=".activities.CropSoilAnalysisManagerActivity" />
        <activity android:name=".activities.CropSprayingManagerActivity" />
        <activity android:name=".activities.CropFertilizerApplicationManagerActivity" />
        <activity android:name=".activities.CropCultivateManagerActivity" />
        <activity android:name=".activities.CropsManagerActivity" />
        <activity android:name=".activities.CropMachinesListActivity" />
        <activity android:name=".activities.CropMachineManagerActivity" />
        <activity
            android:name=".activities.CropFieldsListActivity"
            android:label="@string/title_activity_crop_fields_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.CropFieldManagerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.CropDashboardActivity"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.CropInventorySeedsManagerActivity"
            android:label="@string/title_activity_crop_inventory_seeds_manager"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.CropInventoryListActivity"
            android:label="@string/label_inventory_list"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>